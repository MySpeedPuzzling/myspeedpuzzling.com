<div class="table-responsive custom-table-wrapper">
    <table class="table table-striped table-hover mb-0">
        <tbody>
            {% for solved_puzzle in solved_puzzles %}
                <tr class="{{ solved_puzzle[0].suspicious ? 'table-warning' }}">
                    <td class="text-center" style="width: 90px;">
                        {% if solved_puzzle[0].puzzleImage is not null%}
                            <a href="{{ path('puzzle_detail', {puzzleId: solved_puzzle[0].puzzleId}) }}">
                                {{ lazy_puzzle_image(
                                    solved_puzzle[0].puzzleImage,
                                    'puzzle_small',
                                    'puzzle_img_alt'|trans({'%puzzle%': solved_puzzle[0].manufacturerName ~ ' ' ~ solved_puzzle[0].puzzleName}),
                                    loop.index,
                                    90,
                                    'rounded-2',
                                    60
                                ) }}
                            </a>
                        {% endif %}

                    </td>

                    <td class="d-none d-sm-table-cell">
                        <a class="d-inline-block" style="line-height: 120%" href="{{ path('puzzle_detail', {puzzleId: solved_puzzle[0].puzzleId}) }}">
                            <span style="color: #111;">
                                {{ solved_puzzle[0].manufacturerName }}<br>
                                <small>{{ 'pieces_count'|trans({ '%count%': solved_puzzle[0].piecesCount })|raw }}</small>
                            </span><br>

                            <small class="puzzle-title mt-2">
                                {{ solved_puzzle[0].puzzleName }}
                            </small>
                        </a>

                    </td>

                    <td class="px-0">
                        {% set puzzle = solved_puzzle[0] %}
                        <table style="width: 100%;">
                                <tr>
                                    <td class="align-top">
                                        <a class="low-line-height d-inline-block d-sm-none" href="{{ path('puzzle_detail', {puzzleId: puzzle.puzzleId}) }}">
                                            <small>{{ puzzle.manufacturerName }}</small>
                                            <br>
                                            <small>{{ 'pieces_count'|trans({ '%count%': puzzle.piecesCount })|raw }}</small>
                                        </a>

                                        {# Display rank for solo (only if ranking exists - won't exist for relax-only puzzles) #}
                                        {% if puzzle.players is null and this.ranking[puzzle.puzzleId] is defined %}
                                            <br>
                                            <small>Rank {{ this.ranking[puzzle.puzzleId].rank }} <span class="text-muted">({{ 'ranking_out_of'|trans }} {{ this.ranking[puzzle.puzzleId].totalPlayers }})</span></small><br>
                                        {% endif %}

                                        {% if puzzle.players|length > 0 %}
                                            <p class="low-line-height mt-1 mb-0 player-name">
                                                {% for puzzle_solver in puzzle.players %}
                                                    {% if not loop.first %}
                                                        <br>
                                                    {% endif %}
                                                    {% if puzzle_solver.isPrivate %}
                                                        <span class="player-name-item small text-muted">{{ 'secret_puzzler_name'|trans }}</span>
                                                        <i class="bi bi-incognito text-muted"></i>
                                                    {% elseif puzzle_solver.playerId is not null %}
                                                        <a class="player-name-item" href="{{ path('player_profile', {playerId: puzzle_solver.playerId}) }}">
                                                            <small>{{ puzzle_solver.playerName ?? ('#' ~ puzzle_solver.playerCode) }}</small>
                                                        </a>
                                                        {% if puzzle_solver.playerCountry is not null %}
                                                            <small class="shadow-custom fi fi-{{ puzzle_solver.playerCountry.name }}"></small>
                                                        {% endif %}
                                                    {% else %}
                                                        <small class="player-name-item">{{ puzzle_solver.playerName ?? ('#' ~ puzzle_solver.playerCode) }}</small>
                                                    {% endif %}
                                                {% endfor %}
                                            </p>
                                        {% endif %}
                                    </td>

                                    <td class="text-end text-nowrap with-ppm align-top">
                                        <span class="d-inline-block">
                                            {% if puzzle.time is not null %}
                                                {{ puzzle.time|puzzlingTime }}
                                                <br>
                                                {% if puzzle.finishedAt is not null %}
                                                    <small class="text-muted"><time datetime="{{ puzzle.finishedAt|date('Y-m-d') }}">{{ puzzle.finishedAt|date('d.m.Y') }}</time></small>
                                                    <br>
                                                {% endif %}
                                                <small>
                                                    <span class="text-muted">PPM</span> {{ ppm(puzzle.time, puzzle.piecesCount) }}
                                                    {% if puzzle.players is not null %}
                                                        <br>({{ puzzle.players|length }}x {{ ppm(puzzle.time, puzzle.piecesCount, puzzle.players|length) }})
                                                    {% endif %}
                                                </small>
                                            {% else %}
                                                <span class="badge rounded-pill bg-secondary">
                                                    <i class="bi bi-cup-hot"></i> {{ 'badge.relax'|trans }}
                                                </span>
                                                {% if puzzle.finishedAt is not null %}
                                                    <br>
                                                    <small class="text-muted"><time datetime="{{ puzzle.finishedAt|date('Y-m-d') }}">{{ puzzle.finishedAt|date('d.m.Y') }}</time></small>
                                                {% endif %}
                                            {% endif %}

                                            {% if puzzle.firstAttempt %}
                                                <br>
                                                <span class="badge rounded-pill bg-info">{{ 'first_attempt'|trans }}</span>
                                            {% endif %}

                                            {% if puzzle.unboxed %}
                                                <br>
                                                <span class="badge rounded-pill bg-warning"><i class="bi bi-eye-slash"></i> {{ 'unboxed'|trans }}</span>
                                            {% endif %}

                                            {% if puzzle.suspicious %}
                                                <br>
                                                <span class="badge rounded-pill bg-warning">
                                                    <i class="bi bi-exclamation-triangle"></i> {{ 'badge.suspicious'|trans }}
                                                </span>
                                            {% endif %}

                                            {% if puzzle.competitionName %}
                                                <br>
                                                {% if puzzle.competitionSlug %}
                                                    <a href="{{ path('event_detail', {'slug': puzzle.competitionSlug}) }}">
                                                {% endif %}
                                                <span class="badge rounded-pill bg-primary"><i class="bi bi-trophy-fill"></i>{{ puzzle.competitionShortcut ?? puzzle.competitionName }}</span>
                                                {% if puzzle.competitionSlug %}
                                                    </a>
                                                {% endif %}
                                            {% endif %}
                                        </span>

                                        {% if solved_puzzle|length > 1 %}
                                            <br>
                                            <a href="{{ path('player_puzzle_results', {
                                                playerId: puzzle.playerId,
                                                puzzleId: puzzle.puzzleId,
                                                category: category,
                                                return: app.request.uri,
                                                return_title: puzzle.puzzleName
                                            }) }}"
                                               data-turbo="true"
                                               data-turbo-frame="modal-frame"
                                               class="btn btn-outline-primary btn-xs py-0 px-2 mt-1"
                                               style="font-size: 0.7rem;">
                                                {{ 'show_more_solving_times'|trans({ '%count%': solved_puzzle|length-1 }) }}
                                            </a>
                                        {% endif %}
                                    </td>
                                </tr>
                        </table>

                    </td>

                </tr>
            {% endfor %}
            {% if solved_puzzles|length < 1 %}
                <tr>
                    <td colspan="4" class="text-center">{{ 'profile.no_puzzles_solved'|trans }}</td>
                </tr>
            {% endif %}
        </tbody>
    </table>
</div>
