{#
    Reusable toast notification stream.

    Parameters:
    - message: The toast message to display
    - type: Toast type - 'success' (default), 'danger', 'warning', 'info'
#}
{% set type = type|default('success') %}

<turbo-stream action="append" target="toast-container">
    <template>
        <div class="toast align-items-center text-bg-{{ type }} border-0"
             data-controller="turbo-stream-toast"
             data-turbo-stream-toast-delay-value="3000">
            <div class="d-flex">
                <div class="toast-body">{{ message }}</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </template>
</turbo-stream>
