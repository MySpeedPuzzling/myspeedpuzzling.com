{% extends 'base.html.twig' %}

{% block title %}Add to Collection - {{ puzzle.name }}{% endblock %}

{% block content %}
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="mb-4">Add to Collection</h1>
                
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">{{ puzzle.name }}</h5>
                        <p class="card-text text-muted">
                            {{ puzzle.piecesCount }} pieces
                            {% if puzzle.manufacturer %}
                                â€¢ {{ puzzle.manufacturer.name }}
                            {% endif %}
                        </p>
                    </div>
                </div>

                <form method="post">
                    <input type="hidden" name="_token" value="{{ csrf_token('add-to-collection') }}">
                    
                    <div class="mb-3">
                        <label for="collection_id" class="form-label">Collection</label>
                        <select name="collection_id" id="collection_id" class="form-select" required>
                            <option value="">My Collection (root)</option>
                            {% for collection in collections %}
                                <option value="{{ collection.id }}">
                                    {{ collection.getDisplayName() }}
                                    {% if collection.isSystemCollection() %}
                                        (system)
                                    {% endif %}
                                </option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="comment" class="form-label">Comment (optional)</label>
                        <textarea name="comment" id="comment" class="form-control" rows="3" maxlength="500"></textarea>
                        <small class="text-muted">Add a personal note about this puzzle</small>
                    </div>

                    <div id="forSaleFields" style="display: none;">
                        <div class="mb-3">
                            <label for="price" class="form-label">Price (optional)</label>
                            <input type="number" name="price" id="price" class="form-control" step="0.01" min="0">
                        </div>

                        <div class="mb-3">
                            <label for="condition" class="form-label">Condition (optional)</label>
                            <select name="condition" id="condition" class="form-select">
                                <option value="">Select condition</option>
                                <option value="new_sealed">New (sealed)</option>
                                <option value="like_new">Like new</option>
                                <option value="used_complete">Used (complete)</option>
                                <option value="used_missing">Used (missing pieces)</option>
                            </select>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-block">
                        <button type="submit" class="btn btn-primary">
                            <i class="ci ci-plus"></i> Add to Collection
                        </button>
                        <a href="{{ path('puzzle_detail', {puzzleId: puzzle.id}) }}" class="btn btn-secondary">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('collection_id').addEventListener('change', function() {
            const forSaleFields = document.getElementById('forSaleFields');
            // Show price/condition fields if "for_sale" collection is selected
            if (this.options[this.selectedIndex].text.includes('For Sale')) {
                forSaleFields.style.display = 'block';
            } else {
                forSaleFields.style.display = 'none';
            }
        });
    </script>
{% endblock %}