{% extends 'base.html.twig' %}

{% block title %}Report Detail{% endblock %}

{% block content %}
    <div class="d-flex align-items-center mb-4">
        <a href="{{ path('admin_moderation_dashboard') }}" class="btn btn-sm btn-outline-secondary me-3">Back</a>
        <h1 class="h3 mb-0">Report Detail</h1>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-6">
                            <strong>Reporter:</strong>
                            <div>{{ report.reporterName }} <small class="text-muted">#{{ report.reporterCode }}</small></div>
                        </div>
                        <div class="col-sm-6">
                            <strong>Reported User:</strong>
                            <div>
                                {{ report.reportedPlayerName }} <small class="text-muted">#{{ report.reportedPlayerCode }}</small>
                                <a href="{{ path('admin_moderation_history', {playerId: report.reportedPlayerId}) }}"
                                   class="btn btn-sm btn-outline-secondary ms-2">History</a>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <strong>Reason:</strong>
                        <p class="mb-0">{{ report.reason }}</p>
                    </div>

                    {% if report.puzzleName %}
                        <div class="mb-3">
                            <strong>Puzzle:</strong> {{ report.puzzleName }}
                        </div>
                    {% endif %}

                    <div class="row mb-3">
                        <div class="col-sm-6">
                            <strong>Status:</strong>
                            <span class="badge bg-{{ report.status.value == 'pending' ? 'warning text-dark' : (report.status.value == 'resolved' ? 'success' : (report.status.value == 'dismissed' ? 'secondary' : 'info')) }}">
                                {{ report.status.value|capitalize }}
                            </span>
                        </div>
                        <div class="col-sm-6">
                            <strong>Reported:</strong> {{ report.reportedAt|ago }}
                        </div>
                    </div>

                    {% if report.resolvedAt %}
                        <div class="row mb-3">
                            <div class="col-sm-6">
                                <strong>Resolved:</strong> {{ report.resolvedAt|ago }}
                            </div>
                            <div class="col-sm-6">
                                <strong>Resolved by:</strong> {{ report.resolvedByName }}
                            </div>
                        </div>
                        {% if report.adminNote %}
                            <div class="mb-3">
                                <strong>Admin note:</strong>
                                <p class="mb-0">{{ report.adminNote }}</p>
                            </div>
                        {% endif %}
                    {% endif %}

                    <div class="mb-3">
                        <a href="{{ path('admin_conversation_log', {conversationId: report.conversationId}) }}"
                           class="btn btn-outline-primary">
                            View Conversation Log
                        </a>
                    </div>
                </div>
            </div>

            {% if report.status.value == 'pending' %}
                <div class="card shadow mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Take Action</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-12">
                                <form action="{{ path('admin_resolve_report', {reportId: report.reportId}) }}" method="post">
                                    <div class="mb-3">
                                        <label for="admin_note" class="form-label">Admin Note</label>
                                        <textarea name="admin_note" id="admin_note" class="form-control" rows="2"></textarea>
                                    </div>
                                    <div class="d-flex flex-wrap gap-2">
                                        <button type="submit" name="status" value="dismissed" class="btn btn-outline-secondary">
                                            Dismiss
                                        </button>
                                        <button type="submit" name="status" value="resolved" class="btn btn-success">
                                            Mark Resolved
                                        </button>
                                    </div>
                                </form>
                            </div>

                            <div class="col-12">
                                <hr>
                            </div>

                            <div class="col-md-6">
                                <form action="{{ path('admin_warn_user', {playerId: report.reportedPlayerId}) }}" method="post">
                                    <input type="hidden" name="report_id" value="{{ report.reportId }}">
                                    <div class="mb-2">
                                        <label for="warn_reason" class="form-label">Warning Reason</label>
                                        <input type="text" name="reason" id="warn_reason" class="form-control" required>
                                    </div>
                                    <button type="submit" class="btn btn-warning btn-sm">Warn User</button>
                                </form>
                            </div>

                            <div class="col-md-6">
                                <form action="{{ path('admin_mute_user', {playerId: report.reportedPlayerId}) }}" method="post">
                                    <input type="hidden" name="report_id" value="{{ report.reportId }}">
                                    <div class="mb-2">
                                        <label for="mute_reason" class="form-label">Mute Reason</label>
                                        <input type="text" name="reason" id="mute_reason" class="form-control" required>
                                    </div>
                                    <div class="mb-2">
                                        <label for="mute_days" class="form-label">Duration</label>
                                        <select name="days" id="mute_days" class="form-select">
                                            <option value="7">7 days</option>
                                            <option value="14">14 days</option>
                                            <option value="30">30 days</option>
                                        </select>
                                    </div>
                                    <button type="submit" class="btn btn-danger btn-sm">Mute User</button>
                                </form>
                            </div>

                            <div class="col-md-6">
                                <form action="{{ path('admin_ban_marketplace', {playerId: report.reportedPlayerId}) }}" method="post">
                                    <input type="hidden" name="report_id" value="{{ report.reportId }}">
                                    <div class="mb-2">
                                        <label for="ban_reason" class="form-label">Ban Reason</label>
                                        <input type="text" name="reason" id="ban_reason" class="form-control" required>
                                    </div>
                                    <button type="submit" class="btn btn-danger btn-sm">Ban from Marketplace</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0">Moderation History</h5>
                </div>
                <div class="card-body">
                    {% if moderation_history is empty %}
                        <p class="text-muted mb-0">No previous moderation actions.</p>
                    {% else %}
                        {% for action in moderation_history %}
                            <div class="mb-3 pb-3 {{ not loop.last ? 'border-bottom' : '' }}">
                                <div class="d-flex justify-content-between">
                                    <span class="badge bg-{{ action.actionType.value == 'warning' ? 'warning text-dark' : (action.actionType.value starts with 'ban' or action.actionType.value == 'marketplace_ban' ? 'danger' : 'info') }}">
                                        {{ action.actionType.value|replace({'_': ' '})|capitalize }}
                                    </span>
                                    <small class="text-muted">{{ action.performedAt|ago }}</small>
                                </div>
                                {% if action.reason %}
                                    <small>{{ action.reason }}</small>
                                {% endif %}
                                {% if action.expiresAt %}
                                    <br><small class="text-muted">Expires: {{ action.expiresAt|date('Y-m-d H:i') }}</small>
                                {% endif %}
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
