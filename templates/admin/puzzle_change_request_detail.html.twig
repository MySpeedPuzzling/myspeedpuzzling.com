{% extends 'base.html.twig' %}

{% block title %}Change Request - {{ request.puzzleName }}{% endblock %}

{% block content %}
    {% include '_return_back_button.html.twig' with {fallbackUrl: path('admin_puzzle_change_requests'), fallbackTitle: 'Change requests'} %}

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h1 class="h4 mb-0">Change Request</h1>
                    {% if request.status.value == 'pending' %}
                        <span class="badge bg-warning text-dark">Pending</span>
                    {% elseif request.status.value == 'approved' %}
                        <span class="badge bg-success">Approved</span>
                    {% else %}
                        <span class="badge bg-danger">Rejected</span>
                    {% endif %}
                </div>

                <div class="card-body">
                    {# Puzzle info header #}
                    <div class="d-flex align-items-center mb-4 p-3 bg-light rounded">
                        {% if request.puzzleImage %}
                            <img src="{{ request.puzzleImage|puzzle_image('puzzle_small') }}"
                                 alt="{{ request.puzzleName }}"
                                 class="me-3 rounded"
                                 style="max-height: 80px;">
                        {% endif %}
                        <div>
                            <h5 class="mb-1">
                                <a href="{{ path('puzzle_detail', {puzzleId: request.puzzleId}) }}" target="_blank">
                                    {{ request.puzzleName }}
                                </a>
                            </h5>
                            <p class="mb-0 text-muted">
                                {{ request.puzzleManufacturerName }} - {{ request.puzzlePiecesCount }} pieces
                            </p>
                        </div>
                    </div>

                    {# Changes comparison #}
                    <h5 class="mb-3">Proposed Changes</h5>

                    {% if request.status.value == 'pending' %}
                    <form id="approveForm"
                          action="{{ path('admin_approve_puzzle_change_request', {id: request.id}) }}"
                          method="post">
                    {% endif %}

                    <div class="table-responsive">
                    <table class="table table-bordered mb-0">
                        <thead class="table-light">
                            <tr>
                                {% if request.status.value == 'pending' %}
                                    <th style="width: 5%;">
                                        <input type="checkbox" id="selectAll" checked>
                                    </th>
                                {% endif %}
                                <th style="width: {% if request.status.value == 'pending' %}15{% else %}20{% endif %}%;">Field</th>
                                <th style="width: 40%;">Original</th>
                                <th style="width: 40%;">Proposed</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% if request.hasNameChange() %}
                                <tr>
                                    {% if request.status.value == 'pending' %}
                                        <td><input type="checkbox" name="field_name" value="1" class="field-checkbox" checked></td>
                                    {% endif %}
                                    <td><strong>Name</strong></td>
                                    <td>{{ request.originalName }}</td>
                                    <td class="table-warning">
                                        {% if request.status.value == 'pending' %}
                                            <input type="text" name="override_name" value="{{ request.proposedName }}" class="form-control form-control-sm">
                                        {% else %}
                                            {{ request.proposedName }}
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endif %}

                            {% if request.hasManufacturerChange() %}
                                <tr>
                                    {% if request.status.value == 'pending' %}
                                        <td><input type="checkbox" name="field_manufacturer" value="1" class="field-checkbox" checked></td>
                                    {% endif %}
                                    <td><strong>Manufacturer</strong></td>
                                    <td>{{ request.originalManufacturerName|default('Not set') }}</td>
                                    <td class="table-warning">{{ request.proposedManufacturerName }}</td>
                                </tr>
                            {% endif %}

                            {% if request.hasPiecesCountChange() %}
                                <tr>
                                    {% if request.status.value == 'pending' %}
                                        <td><input type="checkbox" name="field_piecesCount" value="1" class="field-checkbox" checked></td>
                                    {% endif %}
                                    <td><strong>Pieces</strong></td>
                                    <td>{{ request.originalPiecesCount }}</td>
                                    <td class="table-warning">
                                        {% if request.status.value == 'pending' %}
                                            <input type="number" name="override_piecesCount" value="{{ request.proposedPiecesCount }}" class="form-control form-control-sm">
                                        {% else %}
                                            {{ request.proposedPiecesCount }}
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endif %}

                            {% if request.hasEanChange() %}
                                <tr>
                                    {% if request.status.value == 'pending' %}
                                        <td><input type="checkbox" name="field_ean" value="1" class="field-checkbox" checked></td>
                                    {% endif %}
                                    <td><strong>EAN</strong></td>
                                    <td>{{ request.originalEan|default('Not set') }}</td>
                                    <td class="table-warning">
                                        {% if request.status.value == 'pending' %}
                                            <input type="text" name="override_ean" value="{{ request.proposedEan }}" class="form-control form-control-sm">
                                        {% else %}
                                            {{ request.proposedEan }}
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endif %}

                            {% if request.hasIdentificationNumberChange() %}
                                <tr>
                                    {% if request.status.value == 'pending' %}
                                        <td><input type="checkbox" name="field_identificationNumber" value="1" class="field-checkbox" checked></td>
                                    {% endif %}
                                    <td><strong>Brand Code</strong></td>
                                    <td>{{ request.originalIdentificationNumber|default('Not set') }}</td>
                                    <td class="table-warning">
                                        {% if request.status.value == 'pending' %}
                                            <input type="text" name="override_identificationNumber" value="{{ request.proposedIdentificationNumber }}" class="form-control form-control-sm">
                                        {% else %}
                                            {{ request.proposedIdentificationNumber }}
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endif %}

                            {% if request.hasImageChange() %}
                                <tr>
                                    {% if request.status.value == 'pending' %}
                                        <td><input type="checkbox" name="field_image" value="1" class="field-checkbox" checked></td>
                                    {% endif %}
                                    <td><strong>Image</strong></td>
                                    <td>
                                        {% if request.originalImage %}
                                            <img src="{{ request.originalImage|puzzle_image('puzzle_small') }}"
                                                 alt="Original"
                                                 class="img-thumbnail"
                                                 style="max-height: 100px;">
                                        {% else %}
                                            <span class="text-muted">No image</span>
                                        {% endif %}
                                    </td>
                                    <td class="table-warning">
                                        <img src="{{ request.proposedImage|puzzle_image('puzzle_small') }}"
                                             alt="Proposed"
                                             class="img-thumbnail"
                                             style="max-height: 100px;">
                                    </td>
                                </tr>
                            {% endif %}
                        </tbody>
                    </table>
                    </div>

                    {% if not request.hasAnyChange() %}
                        <div class="alert alert-info">
                            No changes were proposed. The user may have submitted the form without modifications.
                        </div>
                    {% endif %}

                    {# Rejection reason if rejected #}
                    {% if request.status.value == 'rejected' and request.rejectionReason %}
                        <div class="alert alert-danger mt-4">
                            <strong>Rejection Reason:</strong><br>
                            {{ request.rejectionReason }}
                        </div>
                    {% endif %}

                    {# Action buttons for pending requests #}
                    {% if request.status.value == 'pending' %}
                        <hr class="my-4">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success" id="approveButton">
                                <i class="bi bi-check-lg me-1"></i> Approve Selected Changes
                            </button>

                            <button type="button"
                                    class="btn btn-danger"
                                    data-bs-toggle="modal"
                                    data-bs-target="#rejectModal">
                                <i class="bi bi-x-lg me-1"></i> Reject
                            </button>
                        </div>
                    </form>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            {# Reporter info #}
            <div class="card shadow mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Reporter</h5>
                </div>
                <div class="card-body">
                    <a href="{{ path('player_profile', {playerId: request.reporterId}) }}" target="_blank">
                        {{ request.reporterName ?? '#' ~ request.reporterCode }}
                    </a>
                    {% if request.reporterName and request.reporterCode %}
                        <span class="text-muted">#{{ request.reporterCode }}</span>
                    {% endif %}
                    <br>
                    <small class="text-muted">Submitted: {{ request.submittedAt|ago }}</small>
                </div>
            </div>

            {# Review info if reviewed #}
            {% if request.reviewedAt %}
                <div class="card shadow">
                    <div class="card-header">
                        <h5 class="mb-0">Review</h5>
                    </div>
                    <div class="card-body">
                        {% if request.reviewerName %}
                            Reviewed by: {{ request.reviewerName }}
                        {% endif %}
                        <br>
                        <small class="text-muted">{{ request.reviewedAt|ago }}</small>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

{# Reject Modal #}
{% if request.status.value == 'pending' %}
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="{{ path('admin_reject_puzzle_change_request', {id: request.id}) }}" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Reject Change Request</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="rejectionReason" class="form-label">Rejection Reason</label>
                        <textarea class="form-control"
                                  id="rejectionReason"
                                  name="rejection_reason"
                                  rows="3"
                                  required
                                  placeholder="Explain why this change request is being rejected..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const selectAll = document.getElementById('selectAll');
        const checkboxes = document.querySelectorAll('.field-checkbox');
        const approveButton = document.getElementById('approveButton');

        function updateApproveButton() {
            const anyChecked = Array.from(checkboxes).some(function (cb) { return cb.checked; });
            approveButton.disabled = !anyChecked;
        }

        if (selectAll) {
            selectAll.addEventListener('change', function () {
                checkboxes.forEach(function (cb) { cb.checked = selectAll.checked; });
                updateApproveButton();
            });
        }

        checkboxes.forEach(function (cb) {
            cb.addEventListener('change', function () {
                selectAll.checked = Array.from(checkboxes).every(function (c) { return c.checked; });
                updateApproveButton();
            });
        });

        updateApproveButton();
    });
</script>
{% endif %}
{% endblock %}
