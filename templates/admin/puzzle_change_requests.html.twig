{% extends 'base.html.twig' %}

{% block title %}Puzzle Change Requests{% endblock %}

{% block content %}
    <h1 class="h3 mb-4">Puzzle Change Requests</h1>

    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link py-2 px-2 px-md-3 fs-sm {{ active_tab == 'pending' ? 'active' : '' }}"
               href="{{ path('admin_puzzle_change_requests', {tab: 'pending'}) }}">
                Pending
                {% if counts.pending > 0 %}
                    <span class="badge bg-warning text-dark">{{ counts.pending }}</span>
                {% endif %}
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link py-2 px-2 px-md-3 fs-sm {{ active_tab == 'approved' ? 'active' : '' }}"
               href="{{ path('admin_puzzle_change_requests', {tab: 'approved'}) }}">
                Approved
                {% if counts.approved > 0 %}
                    <span class="badge bg-success">{{ counts.approved }}</span>
                {% endif %}
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link py-2 px-2 px-md-3 fs-sm {{ active_tab == 'rejected' ? 'active' : '' }}"
               href="{{ path('admin_puzzle_change_requests', {tab: 'rejected'}) }}">
                Rejected
                {% if counts.rejected > 0 %}
                    <span class="badge bg-danger">{{ counts.rejected }}</span>
                {% endif %}
            </a>
        </li>
    </ul>

    {% if requests is empty %}
        <div class="alert alert-info">
            No {{ active_tab }} change requests.
        </div>
    {% else %}
        <div class="card shadow">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="d-none d-md-table-header-group">
                        <tr>
                            <th>Puzzle</th>
                            <th>Reporter</th>
                            <th>Submitted</th>
                            <th>Changes</th>
                            {% if active_tab != 'pending' %}
                                <th>Reviewed</th>
                            {% endif %}
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for request in requests %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-start align-items-md-center">
                                        {% if request.puzzleImage %}
                                            <img src="{{ request.puzzleImage|puzzle_image('puzzle_small') }}"
                                                 alt="{{ request.puzzleName }}"
                                                 class="me-2 rounded flex-shrink-0"
                                                 style="max-height: 40px;">
                                        {% endif %}
                                        <div class="min-w-0">
                                            <a href="{{ path('puzzle_detail', {puzzleId: request.puzzleId}) }}"
                                               target="_blank">
                                                {{ request.puzzleName }}
                                            </a>
                                            <br>
                                            <small class="text-muted">
                                                {{ request.puzzleManufacturerName }} - {{ request.puzzlePiecesCount }} pcs
                                            </small>
                                        </div>
                                    </div>
                                    <div class="d-md-none mt-1">
                                        <small class="text-muted">
                                            {{ request.submittedAt|ago }}
                                            &bull; <a href="{{ path('player_profile', {playerId: request.reporterId}) }}">{{ request.reporterName ? request.reporterName ~ ' #' ~ request.reporterCode : '#' ~ request.reporterCode }}</a>
                                        </small>
                                    </div>
                                    {% if active_tab != 'pending' and request.reviewedAt %}
                                        <div class="d-md-none">
                                            <small class="text-muted">
                                                Reviewed {{ request.reviewedAt|ago }}{% if request.reviewerName %} by {{ request.reviewerName }}{% endif %}
                                            </small>
                                        </div>
                                    {% endif %}
                                    <div class="d-md-none mt-1">
                                        <div class="d-flex flex-wrap gap-1 mb-1">
                                            {% if request.hasNameChange() %}<span class="badge bg-secondary">Name</span>{% endif %}
                                            {% if request.hasManufacturerChange() %}<span class="badge bg-secondary">Manufacturer</span>{% endif %}
                                            {% if request.hasPiecesCountChange() %}<span class="badge bg-secondary">Pieces</span>{% endif %}
                                            {% if request.hasEanChange() %}<span class="badge bg-secondary">EAN</span>{% endif %}
                                            {% if request.hasIdentificationNumberChange() %}<span class="badge bg-secondary">Brand Code</span>{% endif %}
                                            {% if request.hasImageChange() %}<span class="badge bg-secondary">Image</span>{% endif %}
                                        </div>
                                        <a href="{{ path('admin_puzzle_change_request_detail', {id: request.id}) }}"
                                           class="btn btn-sm btn-outline-primary">
                                            View
                                        </a>
                                    </div>
                                </td>
                                <td class="d-none d-md-table-cell">
                                    <a href="{{ path('player_profile', {playerId: request.reporterId}) }}"
                                       target="_blank">
                                        {{ request.reporterName ?? '#' ~ request.reporterCode }}
                                    </a>
                                    {% if request.reporterName and request.reporterCode %}
                                        <br><small class="text-muted">#{{ request.reporterCode }}</small>
                                    {% endif %}
                                </td>
                                <td class="d-none d-md-table-cell">
                                    {{ request.submittedAt|ago }}
                                </td>
                                <td class="d-none d-md-table-cell">
                                    <div class="d-flex flex-wrap gap-1">
                                        {% if request.hasNameChange() %}<span class="badge bg-secondary">Name</span>{% endif %}
                                        {% if request.hasManufacturerChange() %}<span class="badge bg-secondary">Manufacturer</span>{% endif %}
                                        {% if request.hasPiecesCountChange() %}<span class="badge bg-secondary">Pieces</span>{% endif %}
                                        {% if request.hasEanChange() %}<span class="badge bg-secondary">EAN</span>{% endif %}
                                        {% if request.hasIdentificationNumberChange() %}<span class="badge bg-secondary">Brand Code</span>{% endif %}
                                        {% if request.hasImageChange() %}<span class="badge bg-secondary">Image</span>{% endif %}
                                    </div>
                                </td>
                                {% if active_tab != 'pending' %}
                                    <td class="d-none d-md-table-cell">
                                        {% if request.reviewedAt %}
                                            {{ request.reviewedAt|ago }}
                                            {% if request.reviewerName %}
                                                <br><small class="text-muted">by {{ request.reviewerName }}</small>
                                            {% endif %}
                                        {% endif %}
                                    </td>
                                {% endif %}
                                <td class="d-none d-md-table-cell text-end">
                                    <a href="{{ path('admin_puzzle_change_request_detail', {id: request.id}) }}"
                                       class="btn btn-sm btn-outline-primary">
                                        View
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}
{% endblock %}
