<!DOCTYPE html>
<html lang="{{ app.request.locale }}" data-turbo="false">
    <head>
        <meta charset="UTF-8">
        <title>{%- block title -%}{%- endblock -%}{% if app.request.pathInfo != path('homepage') %} | MySpeedPuzzling{% endif %}</title>

        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

        <meta name="description" content="{%- block meta_description -%}{%- endblock -%}{% if block('meta_description') is empty %}{{ 'homepage.meta.description'|trans }}{% endif %}">
        <meta name="keywords" content="{%- block meta_keywords -%}{%- endblock -%}{% if block('meta_keywords') is empty %}{% set currentPageKey = app.request.attributes.get('_route') %}{% if currentPageKey == 'homepage' %}{{ 'homepage.meta.keywords'|trans }}{% elseif currentPageKey == 'hub' %}{{ 'hub.meta.keywords'|trans }}{% elseif currentPageKey == 'puzzles' %}{{ 'puzzle_overview.meta.keywords'|trans }}{% elseif currentPageKey == 'ladder' %}{{ 'ladder.meta.keywords'|trans }}{% elseif currentPageKey == 'players' %}{{ 'puzzlers.meta.keywords'|trans }}{% elseif currentPageKey == 'events' %}{{ 'events.meta.keywords'|trans }}{% elseif currentPageKey == 'faq' %}{{ 'faq.meta.keywords'|trans }}{% else %}speed puzzling, puzzle times, jigsaw puzzles, speedpuzzling{% endif %}{% endif %}">
        <meta name="format-detection" content="telephone=no">
        <meta name="turbo-prefetch" content="false">
        <meta name="turbo-refresh-method" content="morph">

        {% block robots %}<meta name="robots" content="index, follow">{% endblock %}

        <meta property="og:title" content="{% block og_title %}{{ block('title') }}{% if app.request.pathInfo != path('homepage') %} | MySpeedPuzzling{% endif %}{% endblock %}">
        <meta property="og:description" content="{{ block('meta_description') is not empty ? block('meta_description') : 'homepage.meta.description'|trans }}">
        <meta property="og:type" content="{% block og_type %}website{% endblock %}">
        <meta property="og:image" content="{% block og_image %}{{ absolute_url(asset('img/speedpuzzling-logo.png')) }}{% endblock %}">
        <meta property="og:url" content="{{ app.request.uri }}">
        <meta property="og:site_name" content="MySpeedPuzzling">
        <meta name="twitter:card" content="summary">
        <meta name="twitter:title" content="{{ block('og_title') }}">
        <meta name="twitter:description" content="{{ block('meta_description') is not empty ? block('meta_description') : 'homepage.meta.description'|trans }}">
        <meta name="twitter:image" content="{{ block('og_image') }}">

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('apple-touch-icon.png') }}?v=2">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('favicon-32x32.png') }}?v=2">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('favicon-16x16.png') }}?v=2">
        <link rel="manifest" href="{{ asset('site.webmanifest') }}?v=2">
        <link rel="mask-icon" href="{{ asset('safari-pinned-tab.svg') }}?v=2" color="#2d89ef">
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}?v=2">
        <meta name="msapplication-TileColor" content="#2d89ef">
        <meta name="theme-color" content="#ffffff">

        <link type="text/plain" rel="author" href="{{ asset('humans.txt') }}">

        {% block canonical %}
            {% if app.request is defined %}
                {% set route = app.request.attributes.get('_route') %}
                {% if route %}
                    {% set params = app.request.attributes.get('_route_params')|default({}) %}
                    <link rel="canonical" href="{{ url(route, params) }}">
                {% endif %}
            {% endif %}
        {% endblock %}

        {{ encore_entry_link_tags('app') }}

        {% set currentRoute = app.request.attributes.get('_route') %}
        {% set cleanQuery = app.request.query.all|filter((v, k) => k not in ['return', 'return_url', 'return_title']) %}
        {% set routeParams = app.request.attributes.get('_route_params')|default({})|merge(cleanQuery) %}
        {% set routeParamsEn = app.request.attributes.get('_route_params')|default({})|merge(cleanQuery)|merge({'_locale': 'en'}) %}
        {% set routeParamsCs = app.request.attributes.get('_route_params')|default({})|merge(cleanQuery)|merge({'_locale': 'cs'}) %}
        {% set routeParamsEs = app.request.attributes.get('_route_params')|default({})|merge(cleanQuery)|merge({'_locale': 'es'}) %}
        {% set routeParamsJa = app.request.attributes.get('_route_params')|default({})|merge(cleanQuery)|merge({'_locale': 'ja'}) %}
        {% set routeParamsFr = app.request.attributes.get('_route_params')|default({})|merge(cleanQuery)|merge({'_locale': 'fr'}) %}
        {% set routeParamsDe = app.request.attributes.get('_route_params')|default({})|merge(cleanQuery)|merge({'_locale': 'de'}) %}

        {% if currentRoute %}
            <link rel="alternate" hreflang="cs-CZ" href="{{ url(currentRoute, routeParamsCs) }}">
            <link rel="alternate" hreflang="en" href="{{ url(currentRoute, routeParamsEn) }}">
            <link rel="alternate" hreflang="es" href="{{ url(currentRoute, routeParamsEs) }}">
            <link rel="alternate" hreflang="ja" href="{{ url(currentRoute, routeParamsJa) }}">
            <link rel="alternate" hreflang="fr" href="{{ url(currentRoute, routeParamsFr) }}">
            <link rel="alternate" hreflang="de" href="{{ url(currentRoute, routeParamsDe) }}">
            <link rel="alternate" hreflang="x-default" href="{{ url(currentRoute, routeParamsEn) }}">
        {% endif %}

        {{ encore_entry_script_tags('app') }}

        <!-- JSON-LD Structured Data -->
        {% block json_ld %}
        <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "Organization",
            "name": "MySpeedPuzzling",
            "url": "{{ url('homepage', {'_locale': 'en'}) }}",
            "logo": "{{ absolute_url(asset('img/speedpuzzling-logo.png')) }}",
            "description": "{{ 'homepage.meta.description'|trans({'_locale': 'en'}) }}",
            "sameAs": [
                "https://www.instagram.com/myspeedpuzzling/",
                "https://github.com/MySpeedPuzzling/myspeedpuzzling.com"
            ],
            "contactPoint": {
                "@type": "ContactPoint",
                "email": "simona@speedpuzzling.cz",
                "contactType": "customer service"
            },
            "founder": [
                {
                    "@type": "Person",
                    "name": "Simona Mikešová"
                },
                {
                    "@type": "Person", 
                    "name": "Jan Mikeš",
                    "url": "https://janmikes.cz"
                }
            ]
        }
        </script>
        {% endblock %}
    </head>
    <body class="lang-{{ app.request.locale }}"
          data-controller="gallery file-drop-area datepicker global-search toast{% if ga_tracking is not empty %} analytics{% endif %}"
          {% if ga_tracking is not empty %}data-analytics-tracking-id-value="{{ ga_tracking }}"{% endif %}>
        <a href="#main-content" class="visually-hidden-focusable">Skip to content</a>
        {% if is_web() %}
