                        <hr class="d-lg-none my-2">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-lg-center d-lg-flex flex-lg-column align-items-lg-center {% if app.request.pathInfo == path('hub') %}active{% endif %}" href="{{ path('hub') }}">
                                    <i class="me-1 me-lg-0 bi bi-house-door"></i>
                                    <small class="d-none d-lg-block">{{ 'menu.hub'|trans }}</small>
                                    <span class="d-lg-none">{{ 'menu.hub'|trans }}</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-lg-center d-lg-flex flex-lg-column align-items-lg-center {% if app.request.pathInfo == path('puzzles') %}active{% endif %}" href="{{ path('puzzles') }}">
                                    <i class="me-1 me-lg-0 bi bi-puzzle"></i>
                                    <small class="d-none d-lg-block">{{ 'menu.puzzles_overview'|trans }}</small>
                                    <span class="d-lg-none">{{ 'menu.puzzles_overview'|trans }}</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-lg-center d-lg-flex flex-lg-column align-items-lg-center {% if currentRoute == 'marketplace' %}active{% endif %}" href="{{ path('marketplace') }}">
                                    <i class="me-1 me-lg-0 bi bi-shop position-relative">
                                        <span class="d-none d-lg-inline badge bg-primary position-absolute translate-middle-y fst-normal" style="font-size: .55em; top: 6px; left: 100%;">{{ 'new_badge'|trans }}</span>
