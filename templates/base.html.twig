                                    <small class="d-none d-lg-block">{{ 'menu.events'|trans }}</small>
                                    <span class="d-lg-none">{{ 'menu.events'|trans }}</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a rel="nofollow" class="nav-link text-lg-center d-lg-flex flex-lg-column align-items-lg-center {% if app.request.pathInfo == path('stopwatch') %}active{% endif %}" href="{{ path('stopwatch') }}">
                                    <i class="me-1 me-lg-0 ci-time"></i>
                                    <small class="d-none d-lg-block">{{ 'menu.stopwatch'|trans }}</small>
                                    <span class="d-lg-none">{{ 'menu.stopwatch'|trans }}</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-lg-center d-lg-flex flex-lg-column align-items-lg-center {% if app.request.pathInfo == path('faq') %}active{% endif %}" href="{{ path('faq') }}">
                                    <i class="me-1 me-lg-0 bi bi-patch-question"></i>
                                    <small class="d-none d-lg-block">{{ 'menu.faq'|trans }}</small>
                                    <span class="d-lg-none">{{ 'menu.faq'|trans }}</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>
        {% endif %}

