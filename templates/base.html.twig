                                    <small class="d-none d-lg-block">Marketplace</small>
                                    <span class="d-lg-none">Marketplace <span class="badge bg-primary ms-1">{{ 'new_badge'|trans }}</span></span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-lg-center d-lg-flex flex-lg-column align-items-lg-center {% if app.request.pathInfo == path('ladder') %}active{% endif %}" href="{{ path('ladder') }}">
                                    <i class="me-1 me-lg-0 bi bi-trophy"></i>
                                    <small class="d-none d-lg-block">{{ 'menu.ladder'|trans }}</small>
                                    <span class="d-lg-none">{{ 'menu.ladder'|trans }}</span>
                                </a>
