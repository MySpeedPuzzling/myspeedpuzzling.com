                    </div>

                    <div class="text-nowrap">
                        <div class="topbar-text dropdown disable-autohide">
                            <a class="topbar-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <span class="fi shadow-custom fi-{{ app.request.locale == 'cs' ? 'cz' : app.request.locale == 'en' ? 'us' : app.request.locale == 'es' ? 'es' : app.request.locale == 'ja' ? 'jp' : app.request.locale == 'fr' ? 'fr' : app.request.locale == 'de' ? 'de' : 'us' }} shadow-custom me-1"></span>
                                {{ app.request.locale|upper }}
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end">
                                {% if app.request.locale is not same as 'en' %}
                                    <li>
                                        <a class="dropdown-item pb-1" href="{{ currentRoute ? path(currentRoute, routeParamsEn) : path('homepage', {'_locale': 'en'}) }}">
                                            <span class="fi shadow-custom fi-us me-1"></span> English
                                        </a>
                                    </li>
                                {% endif %}

                                {% if app.request.locale is not same as 'de' %}
                                    <li>
                                        <a class="dropdown-item pb-1" href="{{ currentRoute ? path(currentRoute, routeParamsDe) : path('homepage', {'_locale': 'de'}) }}">
                                            <span class="fi shadow-custom fi-de me-1"></span> Deutsch
                                        </a>
                                    </li>
                                {% endif %}

                                {% if app.request.locale is not same as 'cs' %}
                                    <li>
                                        <a class="dropdown-item pb-1" href="{{ currentRoute ? path(currentRoute, routeParamsCs) : path('homepage', {'_locale': 'cs'}) }}">
                                            <span class="fi shadow-custom fi-cz me-1"></span> Čeština
                                        </a>
                                    </li>
                                {% endif %}

                                {% if app.request.locale is not same as 'fr' %}
                                    <li>
                                        <a class="dropdown-item pb-1" href="{{ currentRoute ? path(currentRoute, routeParamsFr) : path('homepage', {'_locale': 'fr'}) }}">
                                            <span class="fi shadow-custom fi-fr me-1"></span> Français
                                        </a>
                                    </li>
                                {% endif %}

                                {% if app.request.locale is not same as 'es' %}
                                    <li>
                                        <a class="dropdown-item pb-1" href="{{ currentRoute ? path(currentRoute, routeParamsEs) : path('homepage', {'_locale': 'es'}) }}">
                                            <span class="fi shadow-custom fi-es me-1"></span> Español
                                        </a>
                                    </li>
                                {% endif %}

                                {% if app.request.locale is not same as 'ja' %}
                                    <li>
                                        <a class="dropdown-item pb-1" href="{{ currentRoute ? path(currentRoute, routeParamsJa) : path('homepage', {'_locale': 'ja'}) }}">
                                            <span class="fi shadow-custom fi-jp me-1"></span> 日本語
                                        </a>
                                    </li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="navbar navbar-expand-lg navbar-light">
                <div class="container">
                    <a class="navbar-brand d-none d-lg-block order-lg-1" href="{{ path('homepage') }}">
                        <img width="50" src="{{ asset('img/speedpuzzling-logo.svg') }}" alt="MySpeedPuzzling.com"/>
                    </a>

                    <a class="navbar-brand d-lg-none me-2" href="{{ path('homepage') }}">
                        <img width="50" src="{{ asset('img/speedpuzzling-logo.svg') }}" alt="MySpeedPuzzling.com"/>
                    </a>

                    <!-- Toolbar -->
                    <div class="navbar-toolbar d-flex align-items-center order-lg-3 ms-lg-3">
                        <a class="navbar-tool ms-1 ms-lg-0 me-n1 me-lg-2" data-action="click->global-search#toggleSearchBar" href="#" aria-label="{{ 'menu.search'|trans }}">
                            <div class="navbar-tool-icon-box">
                                <i class="navbar-tool-icon ci-search" aria-hidden="true"></i>
                            </div>
                            <div class="navbar-tool-text ms-n3"><small>{{ 'menu.search'|trans }}</small></div>
                        </a>

                        {% if logged_user.profile is null %}
                            <a class="navbar-tool ms-1 ms-lg-0 me-n1 me-lg-2" href="{{ path('my_profile') }}" aria-label="{{ 'menu.sign_in'|trans }}">
                                <div class="navbar-tool-icon-box">
                                    <i class="navbar-tool-icon ci-sign-in" aria-hidden="true"></i>
                                </div>
                                <div class="navbar-tool-text ms-n3"><small>{{ 'menu.sign_in'|trans }}</small></div>
                            </a>
                        {% else %}
                            <div class="navbar-tool dropdown ms-1 ms-lg-0 me-n1 me-lg-2">
                                <a class="dropdown-toggle navbar-tool" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" aria-label="{{ 'menu.my_profile'|trans }}">
                                    <div class="navbar-tool-icon-box">
                                        <i class="navbar-tool-icon ci-user" aria-hidden="true"></i>
                                    </div>
                                    <div class="navbar-tool-text ms-n3 no-caret"><small>{{ 'menu.my_profile'|trans }}</small></div>
                                </a>

                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item {% if currentRoute == 'player_profile' and routeParams.playerId == logged_user.profile.playerId %}active{% endif %}" href="{{ path('my_profile') }}">
                                            <i class="bi bi-person me-1"></i> {{ 'menu.my_profile'|trans }}
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item {% if currentRoute == 'player_statistics' and routeParams.playerId == logged_user.profile.playerId %}active{% endif %}" href="{{ path('player_statistics', {'playerId': logged_user.profile.playerId}) }}">
