        <div class="competition-panel-info">
            <i class="bi bi-trophy-fill me-1"></i> {{ 'right_now'|trans }}: <a href="{{ path('event_detail', {'slug': 'world-jigsaw-puzzle-championship-2025'}) }}">World Jigsaw Puzzle Championship</a>
        </div>
