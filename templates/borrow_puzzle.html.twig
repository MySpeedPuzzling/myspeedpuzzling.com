{% extends 'base.html.twig' %}

{% block title %}
    {% if borrowingType == 'to' %}
        Borrow Puzzle To Someone
    {% else %}
        Borrow Puzzle From Someone
    {% endif %}
    - {{ puzzle.name }}
{% endblock %}

{% block content %}
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="mb-4">
                    {% if borrowingType == 'to' %}
                        Lend Puzzle
                    {% else %}
                        Borrow Puzzle
                    {% endif %}
                </h1>
                
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="d-flex gap-3">
                            {% if puzzle.image %}
                                <div class="flex-shrink-0">
                                    <img class="rounded-2" style="max-width: 100px; max-height: 100px;" alt="{{ puzzle.manufacturer.name ~ ' ' ~ puzzle.name }}" src="{{ puzzle.image|imagine_filter('puzzle_small') }}">
                                </div>
                            {% endif %}
                            <div class="flex-grow-1">
                                <h5 class="card-title">{{ puzzle.name }}</h5>
                                <p class="card-text text-muted">
                                    {{ puzzle.piecesCount }} pieces
                                    {% if puzzle.manufacturer %}
                                        â€¢ {{ puzzle.manufacturer.name }}
                                    {% endif %}
                                </p>
                                {% if puzzle.alternativeName %}
                                    <p class="card-text small text-muted">{{ puzzle.alternativeName }}</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>

                {% if activeBorrowings|length > 0 %}
                    <div class="alert alert-warning">
                        <h5 class="alert-heading">Active Borrowings</h5>
                        <p>This puzzle currently has {{ activeBorrowings|length }} active borrowing(s):</p>
                        <ul class="mb-2">
                            {% for borrowing in activeBorrowings %}
                                <li>
                                    {% if borrowingType == 'to' %}
                                        Borrowed to
                                        {% if borrowing.borrower %}
                                            <strong>{{ borrowing.borrower.name }}</strong>
                                        {% elseif borrowing.nonRegisteredPersonName %}
                                            <strong>{{ borrowing.nonRegisteredPersonName }}</strong>
                                        {% else %}
                                            <strong>someone</strong>
                                        {% endif %}
                                    {% else %}
                                        Borrowed from
                                        {% if borrowing.owner %}
                                            <strong>{{ borrowing.owner.name }}</strong>
                                        {% elseif borrowing.nonRegisteredPersonName %}
                                            <strong>{{ borrowing.nonRegisteredPersonName }}</strong>
                                        {% else %}
                                            <strong>someone</strong>
                                        {% endif %}
                                    {% endif %}
                                    since {{ borrowing.borrowedAt|date('d.m.Y') }}
                                </li>
                            {% endfor %}
                        </ul>
                        <p class="mb-0">
                            <strong>You can choose which borrowings to mark as returned using the checkboxes below.</strong>
                        </p>
                    </div>
                {% endif %}

                {{ form_start(form) }}
                    {{ form_row(form.person) }}
                    {{ form_rest(form) }}
                    
                    <div class="d-grid gap-2 d-md-block mt-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="ci ci-check"></i>
                            {% if borrowingType == 'to' %}
                                Lend Puzzle
                            {% else %}
                                Borrow Puzzle
                            {% endif %}
                        </button>
                        <a href="{{ path('puzzle_detail', {puzzleId: puzzle.id}) }}" class="btn btn-secondary">
                            Cancel
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}