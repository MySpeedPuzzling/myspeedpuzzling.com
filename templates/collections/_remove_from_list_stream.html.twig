{# Close modal by clearing the frame #}
<turbo-stream action="update" target="modal-frame">
    <template></template>
</turbo-stream>

{# Only remove the item if we're viewing the same collection we removed from #}
{% if removed_from_collection_id == current_collection_id %}
<turbo-stream action="remove" target="collection-item-{{ puzzle_id }}"></turbo-stream>

{# Update the count #}
<turbo-stream action="update" target="collection-count">
    <template>{{ remaining_count }}</template>
</turbo-stream>

{# Show empty state if no items remaining #}
{% if remaining_count == 0 %}
<turbo-stream action="update" target="collection-list-container">
    <template>
        {{ include('collections/_empty_state.html.twig') }}
    </template>
</turbo-stream>
{% endif %}
{% endif %}

{# Update all dropdown actions (they depend on each other's state) #}
{{ include('puzzle/_dropdown_actions_stream.html.twig', {
    puzzle_id: puzzle_id,
    puzzle_statuses: puzzle_statuses,
    source_collection_id: source_collection_id,
    context: context,
    currentCollectionId: current_collection_id,
}) }}

{# Toast always shows (regardless of which collection) #}
<turbo-stream action="append" target="toast-container">
    <template>
        <div class="toast align-items-center text-bg-success border-0"
             data-controller="turbo-stream-toast"
             data-turbo-stream-toast-delay-value="3000">
            <div class="d-flex">
                <div class="toast-body">
                    {{ message }}
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </template>
</turbo-stream>
