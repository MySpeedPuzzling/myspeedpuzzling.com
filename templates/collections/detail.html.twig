{% extends 'base.html.twig' %}

{% block title %}{{ collection.name }}{% if logged_user.profile is null or logged_user.profile.playerId != collection.playerId %} - {{ player.playerName }}{% endif %}{% endblock %}

{% block content %}
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-1">{{ collection.name }}</h1>
            <p class="text-muted mb-0">
                {% if logged_user.profile is null or logged_user.profile.playerId != collection.playerId %}
                    {{ player.playerName ?? player.code }} â€¢
                {% endif %}
                {{ 'collections.items_count'|trans({'%count%': items|length}) }}
            </p>
        </div>
        
        <div class="d-flex align-items-center">
            {% if collection.visibility.value == 'private' %}
                <span class="badge bg-secondary me-2">
                    <i class="ci-locked me-1"></i> {{ 'collections.private'|trans }}
                </span>
            {% else %}
                <span class="badge bg-success me-2">
                    <i class="ci-eye me-1"></i> {{ 'collections.public'|trans }}
                </span>
            {% endif %}

            {% if logged_user.profile is not null and logged_user.profile.playerId == collection.playerId %}
                {% if collection.collectionId %}
                    <a href="{{ path('edit_collection', {collectionId: collection.collectionId}) }}" class="btn btn-sm btn-outline-primary">
                        <i class="ci-edit me-1"></i> {{ 'edit'|trans }}
                    </a>
                {% else %}
                    <a href="{{ path('edit_system_collection', {playerId: player.playerId}) }}" class="btn btn-sm btn-outline-primary">
                        <i class="ci-edit me-1"></i> {{ 'edit'|trans }}
                    </a>
                {% endif %}
            {% endif %}
        </div>
    </div>

    <div class="mb-4">
        <a href="{{ path('player_collections', {playerId: player.playerId}) }}" class="btn btn-outline-secondary">
            <i class="ci-arrow-left me-1"></i> {{ 'collections.back_to_collections'|trans }}
        </a>
    </div>

    {% if collection and collection.description %}
        <p class="small">
            {{ collection.description|nl2br }}
        </p>
    {% endif %}

    {% if items is empty %}
        <div class="text-center py-5">
            <div class="mb-3">
                <i class="ci-package fs-1 text-muted"></i>
            </div>
            <h4 class="text-muted">{{ 'collections.no_puzzles'|trans }}</h4>
            <p class="text-muted">{{ 'collections.no_puzzles_description'|trans }}</p>
        </div>
    {% else %}
        <div class="table-responsive custom-table-wrapper mt-3 mb-3">
            <table class="table custom-table table-striped table-hover mb-0">
                <tbody>
                    {% for item in items %}
                        <tr>
                            <td style="width: 60px;">
                                {% if item.image %}
                                    <img src="{{ item.image|imagine_filter('puzzle_small') }}"
                                         alt="{{ item.puzzleName }}"
                                         class="rounded"
                                         style="width: 60px; height: 60px; object-fit: cover;">
                                {% else %}
                                    <div class="d-flex align-items-center justify-content-center rounded bg-light"
                                         style="width: 60px; height: 60px;">
                                        <i class="ci-image text-muted"></i>
                                    </div>
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('puzzle_detail', {puzzleId: item.puzzleId}) }}" class="text-decoration-none fw-medium">
                                    {{ item.puzzleName }}
                                </a>
                            </td>
                            <td>
                                <span class="text-nowrap small">
                                    {{ item.piecesCount }}
                                </span>
                            </td>
                            <td class="small">
                                {{ item.manufacturerName ?? '-' }}
                            </td>
                            <td>
                                {% if item.comment %}
                                    <em class="text-muted">{{ item.comment }}</em>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                <small class="text-muted text-nowrap">
                                    {{ item.addedAt|format_datetime('short', 'none') }}
                                </small>
                            </td>
                            {% if logged_user.profile is not null and logged_user.profile.playerId == collection.playerId %}
                                <td style="width: 10px;">
                                    <a href="#" class="btn btn-sm btn-outline-secondary"><i class="bi bi-pencil"></i></a>
                                </td>
                                <td style="width: 10px;">
                                    <twig:RemovePuzzleFromCollectionButton puzzleId="{{ item.puzzleId }}" collectionId="{{ collection.collectionId }}" buttonClass="btn btn-sm btn-outline-danger">
                                        {% block text %}<i class="bi bi-trash"></i>{% endblock %}
                                    </twig:RemovePuzzleFromCollectionButton>
                                </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}
