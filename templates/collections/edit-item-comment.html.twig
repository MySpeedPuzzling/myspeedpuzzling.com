{% extends 'base.html.twig' %}

{% block title %}{{ 'collections.edit_comment.meta.title'|trans({'%name%': collectionItem.puzzle.name}) }}{% endblock %}

{% block content %}
    <twig:PlayerHeader player="{{ player }}" />

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h3 class="mb-0">{{ 'collections.edit_comment.title'|trans }}</h3>
                    <small class="text-muted">{{ collectionItem.puzzle.name }}</small>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}

                    <div class="mb-4">
                        {{ form_row(form.comment) }}
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ cancelUrl }}" class="btn btn-secondary">
                            {{ 'forms.cancel'|trans }}
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>{{ 'collections.edit_comment.submit'|trans }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
