{% extends 'base.html.twig' %}

{% block title %}{{ 'collections.meta.title'|trans }}{% endblock %}

{% block content %}
    <twig:PlayerHeader player="{{ player }}" />

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>{{ isOwnProfile ? 'collections.title'|trans : 'collections.title_other'|trans({'%name%': player.playerName}) }}</h2>
        {% if isOwnProfile %}
            {% if logged_user.profile.activeMembership %}
                <a href="{{ path('create_collection') }}" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-1"></i>{{ 'collections.create.button'|trans }}
                </a>
            {% else %}
                <button
                    type="button"
                    class="btn btn-outline-primary"
                    data-bs-toggle="modal"
                    data-bs-target="#membersExclusiveModal"
                >
                    <i class="ci-locked me-1"></i>{{ 'collections.create.button'|trans }}
                </button>
            {% endif %}
        {% endif %}
    </div>

    {% if collections|length > 0 %}
        <div class="row">
            {% for collection in collections %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-lg">
                        <div class="card-header d-flex justify-content-between align-items-start">
                            <h5 class="card-title mb-0">
                                {% if not collection.collectionId %}
                                    <a href="{{ path('system_collection_detail', {playerId: player.playerId}) }}" class="text-decoration-none">
                                        {{ collection.name|trans }}
                                    </a>
                                {% else %}
                                    <a href="{{ path('collection_detail', {collectionId: collection.collectionId}) }}" class="text-decoration-none">
                                        {{ collection.name }}
                                    </a>
                                {% endif %}
                            </h5>
                            {% if isOwnProfile %}
                                <div class="dropdown">
                                    <button class="btn btn-outline-primary shadow btn-xs dropdown-toggle"
                                            type="button" data-bs-toggle="dropdown">
                                        <i class="ci-menu"></i>
                                    </button>
                                    <ul class="dropdown-menu">
                                        {% if collection.collectionId %}
                                            <li>
                                                <a class="dropdown-item" href="{{ path('edit_collection', {'collectionId': collection.collectionId}) }}">
                                                    <i class="bi bi-pencil me-1"></i>{{ 'collections.edit.button'|trans }}
                                                </a>
                                            </li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <button class="dropdown-item text-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{ collection.collectionId }}">
                                                    <i class="bi bi-trash me-1"></i>{{ 'collections.delete.button'|trans }}
                                                </button>
                                            </li>
                                        {% else %}
                                            <li>
                                                <a class="dropdown-item" href="{{ path('edit_system_collection', {'playerId': player.playerId}) }}">
                                                    <i class="bi bi-pencil me-1"></i>{{ 'collections.edit.button'|trans }}
                                                </a>
                                            </li>
                                        {% endif %}
                                    </ul>
                                </div>
                            {% endif %}
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="bi bi-puzzle me-1"></i>
                                    {{ 'collections.items_count'|trans({'%count%': collection.itemCount}) }}
                                </div>

                                {% if isOwnProfile %}
                                    <div class="d-flex justify-content-between align-items-center mt-2 {{ collection.isPublic() ? 'text-primary' }} small">
                                        <span>
                                            <i class="bi bi-{{ collection.isPublic() ? 'eye' : 'lock' }} me-1"></i>
                                            {% if collection.isPublic() %}
                                                {{ 'collections.visibility.public'|trans }}
                                            {% else %}
                                                {{ 'collections.visibility.private'|trans }}
                                            {% endif %}
                                        </span>
                                    </div>
                                {% endif %}
                            </div>

                            {% if collection.description %}
                                <p class="card-text text-muted mb-0 mt-2 small">{{ collection.description }}</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="bi bi-collection display-1 text-muted"></i>
            </div>
            {% if isOwnProfile %}
                <h3 class="text-muted">{{ 'collections.empty.title'|trans }}</h3>
                <p class="text-muted">{{ 'collections.empty.message'|trans }}</p>
                {% if logged_user.profile.activeMembership %}
                    <a href="{{ path('create_collection') }}" class="btn btn-primary">
                        <i class="bi bi-plus-lg me-1"></i>{{ 'collections.create.button'|trans }}
                    </a>
                {% else %}
                    <button
                        type="button"
                        class="btn btn-outline-primary"
                        data-bs-toggle="modal"
                        data-bs-target="#membersExclusiveModal"
                    >
                        <i class="ci-locked me-1"></i>{{ 'collections.create.button'|trans }}
                    </button>
                {% endif %}
            {% else %}
                <h3 class="text-muted">{{ 'collections.empty.title_other'|trans }}</h3>
                <p class="text-muted">{{ 'collections.empty.message_other'|trans({'%name%': player.playerName}) }}</p>
            {% endif %}
        </div>
    {% endif %}

    {% if isOwnProfile %}
        {% for collection in collections %}
            {% if collection.collectionId %}
                <!-- Delete Confirmation Modal for {{ collection.name }} -->
                <div class="modal fade" tabindex="-1" role="dialog" id="deleteModal{{ collection.collectionId }}">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">{{ 'collections.delete.confirm.title'|trans }}</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p class="fs-sm">{{ 'collections.delete.confirm.message'|trans({'%name%': collection.name}) }}</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">{{ 'forms.cancel'|trans }}</button>
                                <a data-turbo-prefetch="false" href="{{ path('delete_collection', {'collectionId': collection.collectionId}) }}" class="btn btn-danger btn-sm">{{ 'collections.delete.confirm.button'|trans }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    {% endif %}
{% endblock %}
