{% extends 'base.html.twig' %}

{% block title %}{{ 'edit_time.meta.title'|trans }}{% endblock %}

{% block content %}
    <h1>{{ 'edit_time.title'|trans }}</h1>

    <p class="mt-3 mb-3">
        <button class="btn btn-sm btn-outline-danger text-wrap" data-bs-toggle="modal" data-bs-target="#modalConfirm">
            <i class="ci-trash"></i> {{ 'edit_time.delete_button'|trans }}
        </button>
    </p>

    <div data-controller="puzzle-add-form" data-puzzle-add-form-mode-value="{{ initial_mode|default('speed_puzzling') }}">
        <div class="mb-4">
            <div class="btn-group w-100" role="group" aria-label="Form mode selection">
                <input type="radio" class="btn-check" name="form-mode" id="mode-speed" autocomplete="off"
                       {{ initial_mode|default('speed_puzzling') == 'speed_puzzling' ? 'checked' : '' }}
                       value="speed_puzzling"
                       data-action="change->puzzle-add-form#switchMode">
                <label class="btn btn-outline-primary py-2 px-2 d-flex flex-column align-items-center lh-sm text-wrap" for="mode-speed">
                    <i class="bi bi-stopwatch-fill"></i>
                    <small>{{ 'puzzle_add.mode.speed_puzzling'|trans }}</small>
                </label>

                <input type="radio" class="btn-check" name="form-mode" id="mode-relax" autocomplete="off"
                       {{ initial_mode|default('speed_puzzling') == 'relax' ? 'checked' : '' }}
                       value="relax"
                       data-action="change->puzzle-add-form#switchMode">
                <label class="btn btn-outline-primary py-2 px-2 d-flex flex-column align-items-center lh-sm text-wrap" for="mode-relax">
                    <i class="bi bi-cup-hot-fill"></i>
                    <small>{{ 'puzzle_add.mode.relax'|trans }}</small>
                </label>
            </div>
        </div>

        {{ include('_solving_time_form.html.twig') }}
    </div>

    <div class="modal fade" tabindex="-1" role="dialog" id="modalConfirm">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{{ 'edit_time.delete_modal_message'|trans }}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="fs-sm">{{ 'edit_time.delete_modal_confirm'|trans }}</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">{{ 'edit_time.delete_modal_discard_button'|trans }}</button>
                    <a data-turbo-prefetch="false" href="{{ path('delete_time', {timeId: solved_puzzle.timeId}) }}" class="btn btn-primary btn-sm">{{ 'edit_time.delete_modal_confirm_button'|trans }}</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
