{% extends 'base.html.twig' %}

{% block title %}Edit Collection{% endblock %}

{% block content %}
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="mb-4">Edit Collection</h1>

                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.description) }}
                    </div>

                    <div class="mb-4">
                        <div class="form-check">
                            {{ form_widget(form.isPublic, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(form.isPublic, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        </div>
                        {{ form_errors(form.isPublic) }}
                    </div>

                    <div class="d-grid gap-2 d-md-block">
                        <button type="submit" class="btn btn-primary">
                            <i class="ci ci-check"></i> Save Changes
                        </button>
                        <a href="{{ path('collection_detail', {collectionId: collection.id}) }}" class="btn btn-secondary">
                            Cancel
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}