{% apply inline_css(source('@styles/email.css')) %}
    <html>
    <head>
        <meta http-equiv="Content-Type" content="text/html charset=UTF-8">
    </head>
    <body>
    <div class="body">
        <div class="newsletterContainer">
            <div class="text-center">
                <img src="{{ email.image('@images/speedpuzzling-logo.png') }}" class="logo" alt="MySpeedPuzzling.com Logo" width="80">

                <h1>Your subscription has been cancelled</h1>

                <p>Sorry to see you go, maybe, we will see you back, one day :-).</p>
                <p>You will not be charged anymore. The membership will remain active until end of the billing period: <b>{{ membershipExpiresAt }}</b></p>

                <p>
                    You can always manage your membership on the <a href="{{ url('membership') }}">membership page</a>.
                </p>
            </div>
        </div>
    </div>

    </body>
    </html>
{% endapply %}
