{% extends 'base.html.twig' %}

{% block title %}Žebříček{% endblock %}

{% block content %}
    <h1>Žebříček</h1>

    <h2 class="h4 mt-4">Nejrychlejších 10 z 0 na 500 dílků</h2>

    <div class="table-responsive shadow mt-3 mb-5">
        <table class="table table-striped table-hover mb-0">
            <thead>
            <tr>
                <th>Pořadí</th>
                <th>Puzzle</th>
                <th>Jméno</th>
                <th>Čas</th>
            </tr>
            </thead>
            <tbody>
                {% for fastest_player in fastest_players_500_pieces %}
                    <tr>
                        <td>{{ loop.index }}.</td>
                        <td>{{ fastest_player.puzzleName }}</td>
                        <td>{{ fastest_player.playerName }}</td>
                        <td>{{ fastest_player.time|date('H:i:s', 'UTC') }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <h2 class="h4 mt-4">Nejrychlejších 10 z 0 na 500 dílků</h2>

