{{ form_start(form, {
    action: path('lend_puzzle', {puzzleId: puzzle.puzzleId}),
    attr: in_modal ? {'data-turbo': 'true'} : {}
}) }}

<div class="mb-3">
    {{ form_label(form.borrowerCode) }}
    {{ form_widget(form.borrowerCode) }}
    <small class="form-text text-muted">{{ 'lend_borrow.form.borrower_code_help'|trans }}</small>
    {{ form_errors(form.borrowerCode) }}
</div>

<div class="mb-4">
    {{ form_row(form.notes) }}
</div>

<div class="d-grid gap-2 d-sm-flex">
    <button type="submit" class="btn btn-primary flex-grow-1">
        <i class="bi bi-box-arrow-right me-1"></i> {{ 'lend_borrow.lend.button'|trans }}
    </button>
    {% if in_modal %}
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            {{ 'forms.cancel'|trans }}
        </button>
    {% else %}
        <a href="{{ path('puzzle_detail', {puzzleId: puzzle.puzzleId}) }}" class="btn btn-secondary">
            {{ 'forms.cancel'|trans }}
        </a>
    {% endif %}
</div>

{{ form_end(form) }}
