{# Close modal by clearing the frame #}
<turbo-stream action="update" target="modal-frame">
    <template></template>
</turbo-stream>

{# Update puzzle badges container #}
<turbo-stream action="update" target="puzzle-badges-{{ puzzle_id }}">
    <template>
        {{ include('puzzle/_badges.html.twig', {
            puzzle_id: puzzle_id,
            puzzle_statuses: puzzle_statuses
        }) }}
    </template>
</turbo-stream>

{# Update all dropdown actions (they depend on each other's state) #}
{{ include('puzzle/_dropdown_actions_stream.html.twig', {
    puzzle_id: puzzle_id,
    puzzle_statuses: puzzle_statuses,
}) }}

{# Show toast notification #}
<turbo-stream action="append" target="toast-container">
    <template>
        <div class="toast align-items-center text-bg-success border-0"
             data-controller="turbo-stream-toast"
             data-turbo-stream-toast-delay-value="3000">
            <div class="d-flex">
                <div class="toast-body">
                    {{ message }}
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </template>
</turbo-stream>

{# Update collection item card if coming from collection detail page #}
{% if context|default('detail') == 'collection-detail' %}
    {% if action|default('') == 'returned' %}
        {# Clear lent badge #}
        <turbo-stream action="update" target="lent-badge-{{ puzzle_id }}">
            <template></template>
        </turbo-stream>

        {# Remove puzzle-lent class to restore normal appearance #}
        <turbo-stream action="remove_class" target="collection-card-{{ puzzle_id }}" class-name="puzzle-lent"></turbo-stream>
    {% else %}
        {# Add lent badge #}
        <turbo-stream action="update" target="lent-badge-{{ puzzle_id }}">
            <template>
                <div class="mt-1">
                    <span class="badge bg-purple">
                        <i class="bi bi-box-arrow-up-right me-1"></i>{{ 'lend_borrow.lent_to'|trans({'%name%': borrower_name}) }}
                    </span>
                </div>
            </template>
        </turbo-stream>

        {# Add puzzle-lent class for grayscale effect #}
        <turbo-stream action="add_class" target="collection-card-{{ puzzle_id }}" class-name="puzzle-lent"></turbo-stream>
    {% endif %}
{% endif %}
