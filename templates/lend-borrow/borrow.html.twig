{% extends 'base.html.twig' %}

{% block title %}{{ 'lend_borrow.borrow.title'|trans }} - {{ puzzle.puzzleName }}{% endblock %}

{% block content %}
<div class="container py-4">
    <div class="card mx-auto" style="max-width: 500px;">
        <div class="card-header">
            <h5 class="mb-0">{{ 'lend_borrow.borrow.title'|trans }}</h5>
        </div>
        <div class="card-body">
            {% if not logged_user.profile.activeMembership %}
                <div class="text-center py-3">
                    <div class="mb-3">
                        <i class="ci-locked fs-1 text-muted"></i>
                    </div>
                    <h5 class="text-muted">{{ 'lend_borrow.membership_required.title'|trans }}</h5>
                    <p class="text-muted small">{{ 'lend_borrow.membership_required.message'|trans }}</p>
                    <a href="{{ path('membership') }}" class="btn btn-outline-primary">
                        <i class="ci-locked me-1"></i>{{ 'membership.members_exclusive_button'|trans }}
                    </a>
                    <a href="{{ path('puzzle_detail', {puzzleId: puzzle.puzzleId}) }}" class="btn btn-secondary">
                        {{ 'forms.cancel'|trans }}
                    </a>
                </div>
            {% elseif is_already_borrowed %}
                <div class="alert alert-info mb-3">
                    <i class="bi bi-box-arrow-in-left me-2"></i>{{ 'lend_borrow.already_borrowed'|trans }}
                </div>
                <a href="{{ path('puzzle_detail', {puzzleId: puzzle.puzzleId}) }}" class="btn btn-secondary">
                    {{ 'forms.cancel'|trans }}
                </a>
            {% else %}
                {{ include('lend-borrow/_borrow_form.html.twig', {in_modal: false}) }}
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
