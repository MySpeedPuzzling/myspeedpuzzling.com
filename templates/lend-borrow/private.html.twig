{% extends 'base.html.twig' %}

{% block title %}{{ collectionName }} - {{ player.playerName }}{% endblock %}

{% block content %}
    <twig:PlayerHeader player="{{ player }}" />

    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0">{{ collectionName }}</h1>
    </div>

    {% include '_return_back_button.html.twig' with {fallbackUrl: path('puzzle_library', {playerId: player.playerId}), fallbackTitle: 'collections.back_to_library'|trans} %}

    <div class="text-center py-5">
        <div class="mb-4">
            <i class="bi bi-lock display-1 text-muted"></i>
        </div>
        <h3 class="text-muted">{{ 'collections.private_page.title'|trans }}</h3>
        <p class="text-muted">{{ 'collections.private_page.message'|trans({'%name%': player.playerName}) }}</p>
    </div>
{% endblock %}
