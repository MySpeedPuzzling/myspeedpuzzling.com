<div class="card h-100 shadow-sm border-0 position-relative">
    {% if item.reserved %}
        <span class="badge bg-warning position-absolute top-0 end-0 m-2" style="z-index: 1;">{{ 'marketplace.reserved'|trans }}</span>
    {% endif %}

    <div class="card-body p-2 d-flex flex-column">
        <a href="{{ path('puzzle_detail', {puzzleId: item.puzzleId}) }}" class="text-decoration-none">
            <div class="row g-2">
                <div class="col-12 col-md-6">
                    <div class="text-center bg-light rounded p-2" style="min-height: 120px;">
                        <img
                            src="{{ item.puzzleImage|puzzle_image('puzzle_small') }}"
                            alt="{{ item.puzzleName }}"
                            class="rounded"
                            style="max-height: 120px; max-width: 100%; object-fit: contain;"
                        >
                    </div>
                </div>

                <div class="col-12 col-md-6">
                    <h6 class="card-title fs-sm mb-1 text-dark" title="{{ item.puzzleName }}">
                        {{ item.puzzleName|length > 60 ? item.puzzleName|slice(0, 57) ~ '...' : item.puzzleName }}
                    </h6>

                    <div class="fs-xs text-muted mb-1">
                        {{ item.piecesCount }} {{ 'marketplace.pcs'|trans }}{% if item.manufacturerName %} &middot; {{ item.manufacturerName }}{% endif %}
                    </div>

                    <div class="mb-1">
                        {% if item.listingType == 'sell' %}
                            <span class="badge bg-success">{{ 'marketplace.listing_type.sell'|trans }}</span>
                        {% elseif item.listingType == 'swap' %}
                            <span class="badge bg-info">{{ 'marketplace.listing_type.swap'|trans }}</span>
                        {% elseif item.listingType == 'both' %}
                            <span class="badge bg-primary">{{ 'marketplace.listing_type.both'|trans }}</span>
                        {% elseif item.listingType == 'free' %}
                            <span class="badge bg-danger">{{ 'marketplace.listing_type.free'|trans }}</span>
                        {% endif %}

                        {% if item.condition == 'like_new' %}
                            <span class="badge bg-secondary">{{ 'marketplace.condition.like_new'|trans }}</span>
                        {% elseif item.condition == 'normal' %}
                            <span class="badge bg-secondary">{{ 'marketplace.condition.normal'|trans }}</span>
                        {% elseif item.condition == 'not_so_good' %}
                            <span class="badge bg-secondary">{{ 'marketplace.condition.not_so_good'|trans }}</span>
                        {% elseif item.condition == 'missing_pieces' %}
                            <span class="badge bg-secondary">{{ 'marketplace.condition.missing_pieces'|trans }}</span>
                        {% endif %}
                    </div>

                    <div class="mb-1">
                        {% if item.price is not null %}
                            <span class="fw-bold text-dark">{{ item.price }} {{ item.sellerCustomCurrency ?? item.sellerCurrency ?? '' }}</span>
                        {% elseif item.listingType == 'swap' %}
                            <span class="text-info fw-bold">{{ 'marketplace.listing_type.swap'|trans }}</span>
                        {% elseif item.listingType == 'free' %}
                            <span class="text-danger fw-bold">{{ 'marketplace.listing_type.free'|trans }}</span>
                        {% endif %}
                    </div>

                    {% if item.comment %}
                        <div class="fs-xs text-muted mb-1">{{ item.comment|length > 80 ? item.comment|slice(0, 77) ~ '...' : item.comment }}</div>
                    {% endif %}
                </div>
            </div>
        </a>

        <div class="mt-auto d-flex align-items-center justify-content-between pt-1">
            <div class="d-flex align-items-center">
                {% if item.sellerAvatar %}
                    <img src="{{ item.sellerAvatar|imagine_filter('puzzle_small') }}" alt="" class="rounded-circle me-1" style="width: 20px; height: 20px; object-fit: cover;">
                {% endif %}
                <small class="text-muted">{{ item.sellerName ?? item.sellerCode }}</small>
                {% if item.sellerCountry %}
                    <small class="fi fi-{{ item.sellerCountry }} shadow-custom ms-1"></small>
                {% endif %}
                {% if item.sellerRatingCount is defined and item.sellerRatingCount > 0 %}
                    <a href="{{ path('player_ratings', {playerId: item.sellerId}) }}" class="ms-1 text-warning text-decoration-none" title="{{ item.sellerAverageRating|number_format(1) }} ({{ item.sellerRatingCount }})">
                        <small><i class="bi bi-star-fill"></i> {{ item.sellerAverageRating|number_format(1) }} ({{ item.sellerRatingCount }})</small>
                    </a>
                {% endif %}
            </div>

            {% if logged_user.profile is not null and logged_user.profile.playerId is same as item.sellerId %}
                <div class="dropdown">
                    <button class="btn btn-outline-secondary btn-xs py-0 px-1" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-three-dots-vertical" style="font-size: 0.75rem;"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a class="dropdown-item" href="{{ path('edit_sell_swap_list_item', {itemId: item.itemId}) }}">
                                <i class="bi bi-pencil me-1"></i> {{ 'edit'|trans }}
                            </a>
                        </li>
                        {% if item.reserved %}
                            <li>
                                <form action="{{ path('sell_swap_remove_reservation', {itemId: item.itemId}) }}" method="post">
                                    <button type="submit" class="dropdown-item">
                                        <i class="bi bi-bookmark-dash me-1"></i> {{ 'sell_swap_list.remove_reservation.button'|trans }}
                                    </button>
                                </form>
                            </li>
                        {% else %}
                            <li>
                                <a class="dropdown-item text-warning"
                                   href="{{ path('sell_swap_mark_reserved', {itemId: item.itemId}) }}"
                                   data-turbo="true"
                                   data-turbo-frame="modal-frame">
                                    <i class="bi bi-bookmark-check me-1"></i> {{ 'sell_swap_list.mark_reserved.button'|trans }}
                                </a>
                            </li>
                        {% endif %}
                        <li>
                            <a class="dropdown-item text-success"
                               href="{{ path('sellswap_mark_sold', {itemId: item.itemId}) }}"
                               data-turbo="true"
                               data-turbo-frame="modal-frame">
                                <i class="bi bi-check-circle me-1"></i> {{ 'sell_swap_list.mark_sold.button'|trans }}
                            </a>
                        </li>
                        <li>
                            <form action="{{ path('sellswap_remove', {puzzleId: item.puzzleId}) }}" method="post">
                                <button type="submit" class="dropdown-item text-danger">
                                    <i class="bi bi-trash me-1"></i> {{ 'sell_swap_list.remove.button'|trans }}
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            {% elseif logged_user.profile is not null %}
                <a href="{{ path('start_marketplace_conversation', {sellSwapListItemId: item.itemId}) }}" class="btn btn-outline-primary btn-xs py-0 px-1" title="{{ 'marketplace.contact_seller'|trans }}" data-turbo="true" data-turbo-frame="modal-frame">
                    <i class="bi bi-envelope" style="font-size: 0.75rem;"></i>
                </a>
            {% endif %}
        </div>
    </div>
</div>
