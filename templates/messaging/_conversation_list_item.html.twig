<div class="list-group-item list-group-item-action d-flex align-items-center py-3 position-relative {{ conversation.unreadCount > 0 ? 'conversation-unread' : '' }}">
    <a href="{{ path('conversation_detail', {conversationId: conversation.conversationId}) }}" class="stretched-link"></a>

    <div class="me-2 me-sm-3 flex-shrink-0">
        {{ include('messaging/_avatar.html.twig', {avatar: conversation.otherPlayerAvatar, size: 48}) }}
    </div>

    <div class="flex-grow-1 min-width-0">
        <div class="d-flex justify-content-between align-items-center">
            <span class="fw-bold {{ conversation.unreadCount > 0 ? 'text-dark' : '' }}">
                {{ conversation.otherPlayerName }}
                {% if conversation.otherPlayerCountry %}
                    <span class="fi fi-{{ conversation.otherPlayerCountry }} shadow-custom ms-1" style="font-size: 0.75rem;"></span>
                {% endif %}
            </span>
        </div>

        {% if conversation.puzzleName %}
            <div class="d-flex align-items-center gap-1 mt-1">
                <i class="bi bi-shop text-primary flex-shrink-0" style="font-size: 0.7rem;" title="{{ 'marketplace.title'|trans }}"></i>
                <small class="text-muted text-truncate">{{ conversation.puzzleName }}</small>
                {% if conversation.listingType %}
                    {% if conversation.listingType == 'sell' %}
                        <span class="badge bg-success" style="font-size: 0.6rem;">{{ 'marketplace.listing_type.sell'|trans }}</span>
                    {% elseif conversation.listingType == 'swap' %}
                        <span class="badge bg-info" style="font-size: 0.6rem;">{{ 'marketplace.listing_type.swap'|trans }}</span>
                    {% elseif conversation.listingType == 'both' %}
                        <span class="badge bg-primary" style="font-size: 0.6rem;">{{ 'marketplace.listing_type.both'|trans }}</span>
                    {% elseif conversation.listingType == 'free' %}
                        <span class="badge bg-danger" style="font-size: 0.6rem;">{{ 'marketplace.listing_type.free'|trans }}</span>
                    {% endif %}
                {% endif %}
            </div>
        {% endif %}

        {% if conversation.lastMessageSystemType %}
            <div class="small text-truncate {{ conversation.unreadCount > 0 ? 'text-body fw-semibold' : 'text-muted' }}"><i class="bi bi-info-circle me-1"></i>{{ ('messaging.system.preview.' ~ conversation.lastMessageSystemType)|trans }}</div>
        {% elseif conversation.lastMessagePreview %}
            <div class="small text-truncate {{ conversation.unreadCount > 0 ? 'text-body fw-semibold' : 'text-muted' }}">{% if conversation.lastMessageSentByMe %}<span class="text-muted fw-normal">{{ 'messaging.you_prefix'|trans }}</span> {% endif %}{{ conversation.lastMessagePreview }}</div>
        {% endif %}

        {% if conversation.status.value in ['pending', 'ignored'] %}
            <div class="text-muted small fst-italic">{{ 'messaging.waiting_for_acceptance'|trans({'%name%': conversation.otherPlayerName}) }}</div>
        {% endif %}
    </div>

    {% if conversation.lastMessageAt %}
        <div class="text-end ms-2 flex-shrink-0">
            <small class="text-muted d-block" style="font-size: 0.75rem;">{{ conversation.lastMessageAt|ago }}</small>

            {% if conversation.status.value in ['pending', 'ignored'] %}
                <span class="badge bg-warning text-dark rounded-pill">{{ 'messaging.pending_status'|trans }}</span>
            {% elseif conversation.unreadCount > 0 %}
                <span class="badge bg-primary rounded-pill">{{ conversation.unreadCount }}</span>
            {% endif %}

            {% if conversation_ratings is defined and conversation.conversationId in conversation_ratings|keys %}
                {% set conv_rating = conversation_ratings[conversation.conversationId] %}
                {% if conv_rating.myRatingStars is not null %}
                    <span class="d-block mt-1" style="font-size: 0.7rem;">
                        {% for i in 1..conv_rating.myRatingStars %}<i class="bi bi-star-fill text-warning"></i>{% endfor %}
                    </span>
                {% elseif conv_rating.canRate %}
                    <a href="{{ path('rate_transaction', {soldSwappedItemId: conv_rating.soldSwappedItemId, return: path('conversation_detail', {conversationId: conversation.conversationId})}) }}"
                       class="btn btn-outline-warning btn-sm mt-1 position-relative" style="font-size: 0.65rem; z-index: 1;"
                       data-turbo="true"
                       data-turbo-frame="modal-frame">
                        <i class="bi bi-star me-1"></i>{{ 'messaging.rate_pending'|trans }}
                    </a>
                {% endif %}
            {% endif %}
        </div>
    {% endif %}

</div>
