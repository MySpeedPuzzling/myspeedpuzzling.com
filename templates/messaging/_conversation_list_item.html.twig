<a href="{{ path('conversation_detail', {conversationId: conversation.conversationId}) }}" class="list-group-item list-group-item-action d-flex align-items-center py-3 {{ conversation.unreadCount > 0 ? 'bg-light' : '' }}">
    {% if conversation.otherPlayerAvatar %}
        <img src="{{ conversation.otherPlayerAvatar|imagine_filter('avatar_small') }}" alt="" class="rounded-circle me-3 flex-shrink-0" width="48" height="48">
    {% else %}
        <div class="bg-secondary rounded-circle me-3 d-flex align-items-center justify-content-center flex-shrink-0" style="width: 48px; height: 48px;">
            <i class="bi bi-person text-white"></i>
        </div>
    {% endif %}

    <div class="flex-grow-1 min-width-0">
        <div class="d-flex justify-content-between align-items-center">
            <span class="fw-bold {{ conversation.unreadCount > 0 ? 'text-dark' : '' }}">
                {{ conversation.otherPlayerName }}
                {% if conversation.otherPlayerCountry %}
                    <span class="fi fi-{{ conversation.otherPlayerCountry }} shadow-custom ms-1" style="font-size: 0.75rem;"></span>
                {% endif %}
            </span>
            {% if conversation.lastMessageAt %}
                <small class="text-muted ms-2 flex-shrink-0">{{ conversation.lastMessageAt|ago }}</small>
            {% endif %}
        </div>

        {% if conversation.puzzleName %}
            <div class="text-muted small">
                <i class="bi bi-puzzle me-1"></i>{{ conversation.puzzleName }}
            </div>
        {% endif %}

        {% if conversation.lastMessagePreview %}
            <div class="text-muted small text-truncate">{{ conversation.lastMessagePreview }}</div>
        {% endif %}
    </div>

    {% if conversation.unreadCount > 0 %}
        <span class="badge bg-primary rounded-pill ms-2 flex-shrink-0">{{ conversation.unreadCount }}</span>
    {% endif %}
</a>
