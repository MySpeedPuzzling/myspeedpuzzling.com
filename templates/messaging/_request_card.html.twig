<div class="col-12">
    <div class="card">
        <div class="card-body">
            <div class="d-flex align-items-start">
                {% if conversation.otherPlayerAvatar %}
                    <img src="{{ conversation.otherPlayerAvatar|imagine_filter('avatar_small') }}" alt="" class="rounded-circle me-3 flex-shrink-0" width="48" height="48">
                {% else %}
                    <div class="bg-secondary rounded-circle me-3 d-flex align-items-center justify-content-center flex-shrink-0" style="width: 48px; height: 48px;">
                        <i class="bi bi-person text-white"></i>
                    </div>
                {% endif %}

                <div class="flex-grow-1">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                            {% if conversation.puzzleName %}
                                <strong>{{ conversation.otherPlayerName }}</strong> is interested in your puzzle
                                <span class="fw-bold">{{ conversation.puzzleName }}</span>
                            {% else %}
                                <strong>{{ conversation.otherPlayerName }}</strong> wants to message you
                            {% endif %}
                        </div>
                        {% if conversation.lastMessageAt %}
                            <small class="text-muted ms-2">{{ conversation.lastMessageAt|ago }}</small>
                        {% endif %}
                    </div>

                    <div class="d-flex gap-2">
                        <form action="{{ path('accept_conversation', {conversationId: conversation.conversationId}) }}" method="post">
                            <button type="submit" class="btn btn-sm btn-success">
                                <i class="bi bi-check-lg me-1"></i> Accept
                            </button>
                        </form>
                        <form action="{{ path('deny_conversation', {conversationId: conversation.conversationId}) }}" method="post">
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-x-lg me-1"></i> Deny
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
