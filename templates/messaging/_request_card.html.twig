<div class="col-12">
    <div class="card">
        <div class="card-body">
            <div class="d-flex align-items-start">
                {{ include('messaging/_avatar.html.twig', {avatar: conversation.otherPlayerAvatar, size: 48, class: 'me-3 flex-shrink-0'}) }}

                <div class="flex-grow-1">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                            {% if conversation.puzzleName %}
                                {{ 'messaging.interested_in_puzzle'|trans({'%name%': conversation.otherPlayerName}) }}
                                <span class="fw-bold">{{ conversation.puzzleName }}</span>
                            {% else %}
                                {{ 'messaging.wants_to_message'|trans({'%name%': conversation.otherPlayerName}) }}
                            {% endif %}
                        </div>
                        {% if conversation.lastMessageAt %}
                            <small class="text-muted ms-2">{{ conversation.lastMessageAt|ago }}</small>
                        {% endif %}
                    </div>

                    {% if conversation.puzzleName %}
                        <div class="d-flex align-items-center mb-2 p-2 bg-light rounded">
                            {% if conversation.puzzleImage %}
                                <img src="{{ conversation.puzzleImage|puzzle_image('puzzle_small') }}" alt="" class="rounded me-2" style="max-width: 50px; max-height: 50px; object-fit: contain;">
                            {% endif %}
                            <div>
                                <a href="{{ path('puzzle_detail', {puzzleId: conversation.puzzleId}) }}" class="fw-bold small text-decoration-none">{{ conversation.puzzleName }}</a>
                                <div>
                                    {% if conversation.listingType %}
                                        {% if conversation.listingType == 'sell' %}
                                            <span class="badge bg-success" style="font-size: 0.7rem;">{{ 'marketplace.listing_type.sell'|trans }}</span>
                                        {% elseif conversation.listingType == 'swap' %}
                                            <span class="badge bg-info" style="font-size: 0.7rem;">{{ 'marketplace.listing_type.swap'|trans }}</span>
                                        {% elseif conversation.listingType == 'both' %}
                                            <span class="badge bg-primary" style="font-size: 0.7rem;">{{ 'marketplace.listing_type.both'|trans }}</span>
                                        {% elseif conversation.listingType == 'free' %}
                                            <span class="badge bg-danger" style="font-size: 0.7rem;">{{ 'marketplace.listing_type.free'|trans }}</span>
                                        {% endif %}
                                    {% endif %}
                                    {% if conversation.listingPrice %}
                                        <span class="fw-bold small">{{ conversation.listingPrice }}</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endif %}

                    <div class="d-flex gap-2">
                        <form action="{{ path('accept_conversation', {conversationId: conversation.conversationId}) }}" method="post">
                            <button type="submit" class="btn btn-sm btn-success">
                                <i class="bi bi-check-lg me-1"></i> {{ 'messaging.accept'|trans }}
                            </button>
                        </form>
                        <form action="{{ path('deny_conversation', {conversationId: conversation.conversationId}) }}" method="post">
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-x-lg me-1"></i> {{ 'messaging.deny'|trans }}
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
