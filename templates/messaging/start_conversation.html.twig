{% extends 'base.html.twig' %}

{% block title %}{{ 'messaging.new_message'|trans }}{% endblock %}

{% block content %}
<div class="container py-4">
    <div class="mb-3">
        <a href="{{ path('conversations_list') }}" class="btn btn-sm btn-outline-secondary">
            <i class="ci-arrow-left me-1"></i> {{ 'messaging.back_to_messages'|trans }}
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">{{ 'messaging.new_message'|trans }}</h5>
                </div>
                <div class="card-body">
                    {% if recipient is defined %}
                        <div class="d-flex align-items-center mb-3 p-3 bg-light rounded">
                            {{ include('messaging/_avatar.html.twig', {avatar: recipient.avatar, size: 40, class: 'me-2'}) }}
                            <div>
                                <strong>{{ recipient.playerName ?? recipient.code }}</strong>
                            </div>
                        </div>
                    {% endif %}

                    {% if puzzle is defined and puzzle is not null %}
                        <div class="d-flex align-items-center mb-3 p-3 bg-light rounded">
                            {% if puzzle.puzzleImage %}
                                <img src="{{ puzzle.puzzleImage|puzzle_image('puzzle_small') }}" alt="" class="rounded me-3" style="max-width: 80px;">
                            {% endif %}
                            <div>
                                <div class="fw-bold">{{ puzzle.puzzleName }}</div>
                                {% if sell_swap_list_item is defined %}
                                    <div class="text-muted small">
                                        {% if sell_swap_list_item.listingType.value == 'sell' %}
                                            {{ 'marketplace.listing_type.sell'|trans }}
                                        {% elseif sell_swap_list_item.listingType.value == 'swap' %}
                                            {{ 'marketplace.listing_type.swap'|trans }}
                                        {% elseif sell_swap_list_item.listingType.value == 'both' %}
                                            {{ 'marketplace.listing_type.both'|trans }}
                                        {% elseif sell_swap_list_item.listingType.value == 'free' %}
                                            {{ 'marketplace.listing_type.free'|trans }}
                                        {% endif %}
                                        {% if sell_swap_list_item.price %}
                                            - {{ sell_swap_list_item.price }}
                                        {% endif %}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endif %}

                    <form method="post">
                        <div class="mb-3">
                            <label for="message" class="form-label">{{ 'messaging.message_label'|trans }}</label>
                            <textarea name="message" id="message" class="form-control" rows="4" maxlength="2000" required placeholder="{{ 'messaging.write_message_placeholder'|trans }}"></textarea>
                            <div class="form-text">{{ 'messaging.max_characters'|trans }}</div>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-send me-1"></i> {{ 'messaging.send_message'|trans }}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
