{% extends 'base.html.twig' %}

{% block title %}Authorization Error{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Authorization Error</h4>
                </div>
                <div class="card-body">
                    <p class="lead">{{ error_description ?? 'An error occurred during authorization.' }}</p>

                    {% if error %}
                        <p class="text-muted small">Error code: {{ error }}</p>
                    {% endif %}

                    <hr>

                    <a href="{{ path('homepage') }}" class="btn btn-primary">
                        Return to Homepage
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
