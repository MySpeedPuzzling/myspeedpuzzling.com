{% extends 'base.html.twig' %}

{% block title %}{{ player.playerName }} - Collections{% endblock %}

{% block content %}
    <twig:PlayerHeader player="{{ player }}" />

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Collections</h2>
        {% if isOwnProfile %}
            <a href="{{ path('create_collection') }}" class="btn btn-primary">
                <i class="ci ci-plus"></i> New Collection
            </a>
        {% endif %}
    </div>

    {% if collections|length == 0 %}
        <div class="alert alert-info">
            <i class="ci ci-info"></i> No collections yet.
        </div>
    {% else %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {% for collection in collections %}
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">
                                {% if collection.isSystemCollection() %}
                                    <i class="ci ci-lock text-muted"></i>
                                {% elseif not collection.isPublic %}
                                    <i class="ci ci-lock-open text-muted"></i>
                                {% endif %}
                                {{ collection.getDisplayName() }}
                            </h5>
                            {% if collection.description %}
                                <p class="card-text small text-muted">{{ collection.description|nl2br }}</p>
                            {% endif %}
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-secondary">{{ collection.puzzlesCount }} puzzles</span>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="{{ path('collection_detail', {collectionId: collection.id}) }}" class="btn btn-outline-primary">
                                        <i class="ci ci-eye"></i> View
                                    </a>
                                    {% if isOwnProfile and collection.canBeRenamed() %}
                                        <a href="{{ path('edit_collection', {collectionId: collection.id}) }}" class="btn btn-outline-secondary">
                                            <i class="ci ci-pencil"></i>
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}