{# Report duplicate puzzle form - used in both modal and full page #}
{% set in_modal = in_modal|default(false) %}

{{ form_start(report_form, {
    'action': path('puzzle_propose_changes', {puzzleId: puzzle_id}) ~ '?tab=report',
    'attr': {
        'data-turbo': 'true',
        'data-turbo-frame': in_modal ? 'modal-frame' : '_top'
    }
}) }}

    <p class="text-muted small mb-3">
        {{ 'puzzle_report.report_duplicate.description'|trans }}
    </p>

    <div class="alert alert-info small mb-3">
        <i class="bi bi-info-circle me-1"></i>
        {{ 'puzzle_report.report_duplicate.max_puzzles_info'|trans({'%max%': 5}) }}
    </div>

    {# Current puzzle info #}
    <div class="card mb-3">
        <div class="card-body p-2 d-flex align-items-center">
            {% if puzzle.puzzleImage is not null %}
                <img src="{{ puzzle.puzzleImage|puzzle_image('puzzle_small') }}"
                     alt="{{ puzzle.puzzleName }}"
                     class="me-2 rounded"
                     style="max-height: 50px;">
            {% endif %}
            <div>
                <strong>{{ puzzle.puzzleName }}</strong>
                <br>
                <small class="text-muted">{{ puzzle.manufacturerName }} - {{ 'pieces_count'|trans({'%count%': puzzle.piecesCount})|raw }}</small>
            </div>
        </div>
    </div>

    {{ form_row(report_form.duplicatePuzzleUrls) }}

    <p class="text-muted small">
        {{ 'puzzle_report.form.or_search_by_manufacturer'|trans }}
    </p>

    {{ form_row(report_form.selectedManufacturerId) }}

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-warning" data-loading-text="{{ 'forms.saving'|trans }}">
            {{ 'puzzle_report.form.submit_duplicate'|trans }}
        </button>

        {% if in_modal %}
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                {{ 'forms.cancel'|trans }}
            </button>
        {% else %}
            <a href="{{ path('puzzle_detail', {puzzleId: puzzle_id}) }}" class="btn btn-secondary">
                {{ 'forms.cancel'|trans }}
            </a>
        {% endif %}
    </div>

{{ form_end(report_form) }}
