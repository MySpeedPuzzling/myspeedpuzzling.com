<turbo-frame id="modal-frame">
    <div class="modal-header">
        <h5 class="modal-title">{{ 'pending_proposals.title'|trans }}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>

    <div class="modal-body">
        {% if proposals is empty %}
            <p class="text-muted mb-0">{{ 'pending_proposals.no_proposals'|trans }}</p>
        {% else %}
            {% for proposal in proposals %}
                <div class="border rounded p-3 {% if not loop.last %}mb-3{% endif %}">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <span class="badge bg-{{ proposal.type == 'change_request' ? 'info' : 'warning' }} text-{{ proposal.type == 'change_request' ? 'white' : 'dark' }}">
                            {{ ('pending_proposals.type.' ~ proposal.type)|trans }}
                        </span>
                        <small class="text-muted">{{ proposal.submittedAt|date('M j, Y') }}</small>
                    </div>
                    <p class="mb-1"><strong>{{ proposal.summary }}</strong></p>
                    {% if proposal.reporterName %}
                        <small class="text-muted">
                            {{ 'pending_proposals.reported_by'|trans }}: {{ proposal.reporterName }}
                        </small>
                    {% endif %}

                    {# Display merge puzzle details #}
                    {% if proposal.mergePuzzles is not empty %}
                        <div class="mt-3">
                            {% for puzzle in proposal.mergePuzzles %}
                                <div class="d-flex align-items-center gap-2 {% if not loop.last %}mb-2 pb-2 border-bottom{% endif %}">
                                    {% if puzzle.image %}
                                        <img src="{{ puzzle.image|puzzle_image('puzzle_small') }}"
                                             alt="{{ puzzle.name }}"
                                             class="rounded"
                                             style="width: 50px; height: 50px; object-fit: cover;">
                                    {% else %}
                                        <div class="rounded bg-secondary d-flex align-items-center justify-content-center"
                                             style="width: 50px; height: 50px;">
                                            <i class="bi bi-puzzle text-white"></i>
                                        </div>
                                    {% endif %}
                                    <div class="flex-grow-1 min-width-0">
                                        <a href="{{ path('puzzle_detail', {puzzleId: puzzle.id}) }}"
                                           class="text-decoration-none fw-medium d-block text-truncate">
                                            {{ puzzle.name }}
                                        </a>
                                        <small class="text-muted">
                                            {% if puzzle.manufacturerName %}{{ puzzle.manufacturerName }} &middot; {% endif %}
                                            {% if puzzle.piecesCount %}{{ puzzle.piecesCount }} pcs &middot; {% endif %}
                                            {{ puzzle.timesCount }} {{ puzzle.timesCount == 1 ? 'time' : 'times' }}
                                        </small>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}

                    {% if is_granted('ADMIN_ACCESS') %}
                        <div class="mt-2">
                            {% if proposal.type == 'change_request' %}
                                <a href="{{ path('admin_puzzle_change_request_detail', {id: proposal.id}) }}"
                                   class="btn btn-sm btn-outline-primary">
                                    {{ 'pending_proposals.go_to_admin'|trans }}
                                </a>
                            {% else %}
                                <a href="{{ path('admin_puzzle_merge_request_detail', {id: proposal.id}) }}"
                                   class="btn btn-sm btn-outline-primary">
                                    {{ 'pending_proposals.go_to_admin'|trans }}
                                </a>
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        {% endif %}
    </div>
</turbo-frame>
