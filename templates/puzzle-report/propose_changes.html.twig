{% extends 'base.html.twig' %}

{% block title %}{{ 'puzzle_report.title'|trans }} - {{ puzzle.puzzleName }}{% endblock %}

{% block content %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="mb-3">
                <a href="{{ path('puzzle_detail', {puzzleId: puzzle_id}) }}" class="btn btn-sm btn-outline-secondary">
                    <i class="ci-arrow-left me-1"></i> {{ 'puzzle_report.back_to_puzzle'|trans }}
                </a>
            </div>

            <div class="card">
                <div class="card-header">
                    <h1 class="h4 mb-0">{{ 'puzzle_report.title'|trans }}</h1>
                </div>

                <div class="card-body">
                    {# Puzzle info #}
                    <div class="d-flex align-items-center mb-4 p-3 bg-light rounded">
                        {% if puzzle.puzzleImage is not null %}
                            <img src="{{ puzzle.puzzleImage|puzzle_image('puzzle_small') }}"
                                 alt="{{ puzzle.puzzleName }}"
                                 class="me-3 rounded"
                                 style="max-height: 80px;">
                        {% endif %}
                        <div>
                            <h5 class="mb-1">{{ puzzle.puzzleName }}</h5>
                            <p class="mb-0 text-muted">
                                {{ puzzle.manufacturerName }} - {{ 'pieces_count'|trans({'%count%': puzzle.piecesCount})|raw }}
                            </p>
                        </div>
                    </div>

                    {# Tabs #}
                    <div class="btn-group w-100 mb-4" role="tablist">
                        <button type="button"
                                class="btn btn-outline-primary py-2 px-3 d-flex flex-column align-items-center lh-sm {{ active_tab == 'propose' ? 'active' : '' }}"
                                id="propose-tab" data-bs-toggle="tab" data-bs-target="#propose-pane" role="tab">
                            <i class="bi bi-pencil-square"></i>
                            <small>{{ 'puzzle_report.tab.propose_changes'|trans }}</small>
                        </button>

                        <button type="button"
                                class="btn btn-outline-primary py-2 px-3 d-flex flex-column align-items-center lh-sm {{ active_tab == 'report' ? 'active' : '' }}"
                                id="report-tab" data-bs-toggle="tab" data-bs-target="#report-pane" role="tab">
                            <i class="bi bi-files"></i>
                            <small>{{ 'puzzle_report.tab.report_duplicate'|trans }}</small>
                        </button>
                    </div>

                    <div class="tab-content">
                        {# Propose Changes Tab #}
                        <div class="tab-pane fade {{ active_tab == 'propose' ? 'show active' : '' }}" id="propose-pane" role="tabpanel">
                            {{ include('puzzle-report/_propose_changes_form.html.twig', {in_modal: false}) }}
                        </div>

                        {# Report Duplicate Tab #}
                        <div class="tab-pane fade {{ active_tab == 'report' ? 'show active' : '' }}" id="report-pane" role="tabpanel">
                            {{ include('puzzle-report/_report_duplicate_form.html.twig', {in_modal: false}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
