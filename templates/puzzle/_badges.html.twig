{# Puzzle status badges - reusable partial for Turbo Stream updates #}
{% if puzzle_id in puzzle_statuses.solved %}
    <span class="mt-1 badge border border-success text-success rounded-pill"><i class="ci-check"></i> {{ 'status.solved'|trans }}</span>
{% endif %}
{% if puzzle_id in puzzle_statuses.wishlist %}
    <span class="mt-1 badge border border-warning text-warning rounded-pill"><i class="ci-heart"></i> {{ 'status.wishlist'|trans }}</span>
{% endif %}
{% if puzzle_id in puzzle_statuses.collection %}
    <span class="mt-1 badge border border-primary text-primary rounded-pill"><i class="bi bi-collection"></i> {{ 'status.collection'|trans }}</span>
{% endif %}
{% if puzzle_id in puzzle_statuses.unsolved %}
    <span class="mt-1 badge border border-info text-info rounded-pill"><i class="ci-time"></i> {{ 'status.unsolved'|trans }}</span>
{% endif %}
{% if puzzle_id in puzzle_statuses.borrowed %}
    <span class="mt-1 badge border border-dark text-dark rounded-pill"><i class="bi bi-box-arrow-in-left"></i> {{ 'status.borrowed'|trans }}</span>
{% endif %}
{% if puzzle_id in puzzle_statuses.lent %}
    <span class="mt-1 badge border border-dark text-dark rounded-pill"><i class="bi bi-box-arrow-right"></i> {{ 'status.lent'|trans }}</span>
{% endif %}
{% if puzzle_id in puzzle_statuses.sellSwap %}
    <span class="mt-1 badge border border-danger text-danger rounded-pill"><i class="ci-tag"></i> {{ 'status.for_sale'|trans }}</span>
{% endif %}
