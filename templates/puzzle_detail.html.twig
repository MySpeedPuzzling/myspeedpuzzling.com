{% extends 'base.html.twig' %}

{% block title %}{{ puzzle.manufacturerName }} {{ puzzle.puzzleName }} {{ 'pieces_count'|trans({ '%count%': puzzle.piecesCount })|raw }}{% endblock %}
{% block meta_description %}{{ 'puzzle_detail.meta.description'|trans({ '%puzzle%': puzzle.puzzleName, '%brand%': puzzle.manufacturerName, '%pieces%': puzzle.piecesCount }) }}{% endblock %}

{% block content %}
    <div class="position-relative">

        <div class="d-flex">
            <div class="flex-shrink-0 puzzle-detail-image text-center me-2 me-md-3">
                {% if puzzle.puzzleImage is not null%}
                    <div class="gallery">
                        <a class="gallery-item gallery-item-inline-block rounded-2" href="{{ uploaded_asset(puzzle.puzzleImage) }}">
                            <img alt="{{ 'puzzle_img_alt'|trans({'%puzzle%': puzzle.manufacturerName ~ ' ' ~ puzzle.puzzleName}) }}" src="{{ puzzle.puzzleImage|imagine_filter('puzzle_medium') }}">
                        </a>
                    </div>
                {% endif %}
            </div>

            <div class="flex-wrap flex-grow-1 d-md-flex flex-sm-grow-0 me-1 me-sm-3 me-md-4">
                <div class="me-md-4">
                    <h1 class="h4 mb-0">{{ puzzle.puzzleName }}</h1>
                    <div class="mb-1">
                        {% if puzzle.puzzleId in puzzle_statuses.solved %}
                            <span class="badge border border-success text-success rounded-pill"><i class="ci-check"></i> {{ 'status.solved'|trans }}</span>
                        {% endif %}
                        {% if puzzle.puzzleId in puzzle_statuses.wishlist %}
                            <span class="badge border border-warning text-warning rounded-pill"><i class="ci-heart"></i> {{ 'status.wishlist'|trans }}</span>
                        {% endif %}
                        {% if puzzle.puzzleId in puzzle_statuses.collection %}
                            <span class="badge border border-primary text-primary rounded-pill"><i class="bi bi-collection"></i> {{ 'status.collection'|trans }}</span>
                        {% endif %}
                        {% if puzzle.puzzleId in puzzle_statuses.unsolved %}
                            <span class="badge border border-info text-info rounded-pill"><i class="ci-time"></i> {{ 'status.unsolved'|trans }}</span>
                        {% endif %}
                        {% if puzzle.puzzleId in puzzle_statuses.borrowed %}
                            <span class="badge border border-dark text-dark rounded-pill"><i class="ci-arrow-down"></i> {{ 'status.borrowed'|trans }}</span>
                        {% endif %}
                        {% if puzzle.puzzleId in puzzle_statuses.lent %}
                            <span class="badge border border-dark text-dark rounded-pill"><i class="ci-arrow-up"></i> {{ 'status.lent'|trans }}</span>
                        {% endif %}
                        {% if puzzle.puzzleId in puzzle_statuses.sellSwap %}
                            <span class="badge border border-danger text-danger rounded-pill"><i class="ci-tag"></i> {{ 'status.for_sale'|trans }}</span>
                        {% endif %}
                    </div>

                    <small class="fw-bold">{{ 'pieces_count'|trans({ '%count%': puzzle.piecesCount })|raw }}</small>
                </div>
                <div>
                    <div class="fs-sm manufacturer-name">
                        {{ puzzle.manufacturerName }}
                        {% if puzzle.puzzleIdentificationNumber is not null %}
                            <br class="d-none d-md-block"><small class="text-muted">{{ puzzle.puzzleIdentificationNumber }}</small>
                        {% endif %}
                    </div>

                    {% if puzzle.puzzleEan %}
                        <small class="text-muted"><i class="bi-upc-scan"></i> {{ puzzle.puzzleEan }}</small>
                    {% endif %}

                    {% if tags %}
                        <p class="mb-0">
                            {% for tag in tags %}
                                <span class="badge bg-primary badge-shadow rounded-pill"><i class="ci-diamond"></i> {{ tag.name }}</span>
                            {% endfor %}
                        </p>
                    {% endif %}
                </div>
            </div>

            {{ component('PuzzleActionsDropdown', {
                puzzleId: puzzle.puzzleId,
                key: 'puzzle-actions-' ~ puzzle.puzzleId
            }) }}
        </div>

    </div>

    {% if not puzzle.puzzleApproved %}
        <div class="alert-warning alert small my-1">{{ 'puzzle_waiting_for_approval'|trans }}</div>
    {% endif %}

    <twig:PuzzleTimes puzzleId="{{ puzzle.puzzleId }}" piecesCount="{{ puzzle.piecesCount }}" />

{% endblock %}
