{% extends 'base.html.twig' %}

{% block title %}{{ puzzle.manufacturerName }} {{ puzzle.puzzleName }} {{ 'pieces_count'|trans({ '%count%': puzzle.piecesCount })|raw }}{% endblock %}
{% block meta_description %}{{ 'puzzle_detail.meta.description'|trans({ '%puzzle%': puzzle.puzzleName, '%brand%': puzzle.manufacturerName, '%pieces%': puzzle.piecesCount }) }}{% endblock %}

{% block content %}
    <div class="position-relative">

        <div class="d-flex">
            <div class="flex-shrink-0 puzzle-detail-image text-center me-2 me-md-3">
                <div class="gallery">
                    {% if puzzle.puzzleImage is not null %}
                        <a class="gallery-item gallery-item-inline-block rounded-2" href="{{ uploaded_asset(puzzle.puzzleImage) }}">
                            <img alt="{{ 'puzzle_img_alt'|trans({'%puzzle%': puzzle.manufacturerName ~ ' ' ~ puzzle.puzzleName}) }}" src="{{ puzzle.puzzleImage|puzzle_image('puzzle_medium') }}">
                        </a>
                    {% else %}
                        <img alt="{{ 'puzzle_img_alt'|trans({'%puzzle%': puzzle.manufacturerName ~ ' ' ~ puzzle.puzzleName}) }}" src="{{ puzzle.puzzleImage|puzzle_image('puzzle_medium') }}" class="rounded-2">
                    {% endif %}
                </div>
            </div>

            <div class="flex-wrap flex-grow-1 d-md-flex flex-sm-grow-0 me-1 me-sm-3 me-md-4">
                <div class="me-md-4">
                    <h1 class="h4 mb-0">{{ puzzle.puzzleName }}</h1>
                    <div class="mb-1" id="puzzle-badges-{{ puzzle.puzzleId }}">
                        {{ include('puzzle/_badges.html.twig', {
                            puzzle_id: puzzle.puzzleId,
                            puzzle_statuses: puzzle_statuses,
                        }) }}
                        {% if offers_count > 0 %}
                            <a href="{{ path('puzzler_offers', {puzzleId: puzzle.puzzleId}) }}"
                               class="mt-1 badge bg-danger badge-shadow rounded-pill text-white link-light">
                                <i class="bi bi-shop me-1"></i>
                                {{ 'puzzler_offers.badge'|trans({'%count%': offers_count}) }}
                            </a>
                        {% endif %}
                        {% if has_pending_proposals %}
                            <a href="{{ path('puzzle_pending_proposals', {puzzleId: puzzle.puzzleId}) }}"
                               class="mt-1 badge bg-warning text-dark rounded-pill"
                               data-turbo="true"
                               data-turbo-frame="modal-frame">
                                <i class="bi bi-exclamation-triangle me-1"></i>
                                {{ 'pending_proposals.badge'|trans }}
                            </a>
                        {% endif %}
                    </div>

                    <small class="fw-bold">{{ 'pieces_count'|trans({ '%count%': puzzle.piecesCount })|raw }}</small>
                </div>
                <div>
                    <div class="fs-sm manufacturer-name">
                        {{ puzzle.manufacturerName }}
                        {% if puzzle.puzzleIdentificationNumber is not null %}
                            <br class="d-none d-md-block"><small class="text-muted">{{ puzzle.puzzleIdentificationNumber }}</small>
                        {% endif %}
                    </div>

                    {% if puzzle.puzzleEan %}
                        <small class="text-muted"><i class="bi-upc-scan"></i> {{ puzzle.puzzleEan }}</small>
                    {% endif %}

                    {% if tags %}
                        <p class="mb-0">
                            {% for tag in tags %}
                                <span class="badge bg-primary badge-shadow rounded-pill"><i class="ci-diamond"></i> {{ tag.name }}</span>
                            {% endfor %}
                        </p>
                    {% endif %}
                </div>
            </div>

            <div class="dropdown">
                <button class="btn btn-outline-primary shadow btn-xs dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="ci-menu"></i>
                </button>

                <ul class="dropdown-menu">
                    <li>
                        <a class="dropdown-item" data-turbo-frame="_top" rel="nofollow" href="{{ path('puzzle_add', {puzzleId: puzzle.puzzleId}) }}">
                            <i class="ci-add me-1"></i> {{  'add_solving'|trans }}
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" data-turbo-frame="_top" rel="nofollow" href="{{ path('stopwatch_puzzle', {puzzleId: puzzle.puzzleId}) }}">
                            <i class="ci-time me-1"></i> {{ 'start_solving'|trans }}
                        </a>
                    </li>

                    {% if logged_user.profile is not null %}
                        <li><hr class="dropdown-divider"></li>

                        {{ include('puzzle/_dropdown_actions.html.twig', {
                            puzzle_id: puzzle.puzzleId,
                            puzzle_statuses: puzzle_statuses,
                            offer_counts: { (puzzle.puzzleId): offers_count },
                        }) }}
                    {% endif %}
                </ul>
            </div>

        </div>

    </div>

    {% if not puzzle.puzzleApproved %}
        <div class="alert-warning alert small my-1">{{ 'puzzle_waiting_for_approval'|trans }}</div>
    {% endif %}

    {% if offers_count > 0 %}
        <div class="card shadow-lg mt-3 mb-3">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-shop me-2"></i>{{ 'puzzler_offers.title'|trans }}
                    <span class="badge bg-danger ms-1">{{ offers_count }}</span>
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th class="ps-3">{{ 'puzzler_offers.column.player'|trans }}</th>
                                <th>{{ 'puzzler_offers.column.type'|trans }}</th>
                                <th>{{ 'puzzler_offers.column.price'|trans }}</th>
                                <th>{{ 'puzzler_offers.column.condition'|trans }}</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for offer in offers_preview %}
                                <tr>
                                    <td class="ps-3">
                                        <a href="{{ path('sell_swap_list_detail', {playerId: offer.playerId}) }}" class="text-decoration-none">
                                            <div class="d-flex align-items-center">
                                                {% if offer.playerAvatar %}
                                                    <img src="{{ offer.playerAvatar|imagine_filter('puzzle_small') }}" alt="" class="rounded-circle me-2" style="width: 32px; height: 32px; object-fit: cover;">
                                                {% else %}
                                                    <span class="rounded-circle bg-primary text-white me-2 d-flex align-items-center justify-content-center" style="width: 32px; height: 32px; font-size: 14px;">
                                                        {{ (offer.playerName ?? offer.playerCode)|slice(0, 1)|upper }}
                                                    </span>
                                                {% endif %}
                                                <small>{{ offer.playerName ?? offer.playerCode }}</small>{% if offer.playerCountry %}<small class="shadow-custom fi fi-{{ offer.playerCountry }} ms-1"></small>{% endif %}
                                            </div>
                                        </a>
                                    </td>
                                    <td>
                                        {% if offer.reserved %}
                                            <span class="badge bg-warning">{{ 'sell_swap_list.reserved'|trans }}</span>
                                        {% endif %}
                                        {% if offer.listingType.value == 'swap' %}
                                            <span class="badge bg-info">{{ 'sell_swap_list.listing_type.swap'|trans }}</span>
                                        {% elseif offer.listingType.value == 'sell' %}
                                            <span class="badge bg-success">{{ 'sell_swap_list.listing_type.sell'|trans }}</span>
                                        {% elseif offer.listingType.value == 'free' %}
                                            <span class="badge bg-danger">{{ 'sell_swap_list.listing_type.free'|trans }}</span>
                                        {% else %}
                                            <span class="badge bg-primary">{{ 'sell_swap_list.listing_type.both'|trans }}</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if offer.price %}
                                            <span class="badge bg-warning text-dark">{{ offer.price }} {{ offer.customCurrency ?? offer.currency ?? '' }}</span>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">
                                            {% if offer.condition.value == 'like_new' %}
                                                {{ 'sell_swap_list.condition.like_new'|trans }}
                                            {% elseif offer.condition.value == 'normal' %}
                                                {{ 'sell_swap_list.condition.normal'|trans }}
                                            {% elseif offer.condition.value == 'not_so_good' %}
                                                {{ 'sell_swap_list.condition.not_so_good'|trans }}
                                            {% else %}
                                                {{ 'sell_swap_list.condition.missing_pieces'|trans }}
                                            {% endif %}
                                        </span>
                                    </td>
                                    <td>
                                        {% if logged_user.profile is not null and logged_user.profile.playerId is not same as offer.playerId %}
                                            <a href="{{ path('start_marketplace_conversation', {sellSwapListItemId: offer.sellSwapListItemId}) }}" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-envelope me-1"></i> Contact
                                            </a>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            {% if offers_count > 3 %}
                <div class="card-footer text-center">
                    <a href="{{ path('puzzler_offers', {puzzleId: puzzle.puzzleId}) }}" class="text-decoration-none">
                        {{ 'puzzler_offers.view_all'|trans({'%count%': offers_count}) }} &rarr;
                    </a>
                </div>
            {% endif %}
        </div>
    {% endif %}

    <twig:PuzzleTimes puzzleId="{{ puzzle.puzzleId }}" piecesCount="{{ puzzle.piecesCount }}" />

{% endblock %}
