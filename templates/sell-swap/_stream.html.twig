{# Close modal by clearing the frame #}
<turbo-stream action="update" target="modal-frame">
    <template></template>
</turbo-stream>

{# Update puzzle badges container #}
<turbo-stream action="update" target="puzzle-badges-{{ puzzle_id }}">
    <template>
        {{ include('puzzle/_badges.html.twig', {
            puzzle_id: puzzle_id,
            puzzle_statuses: puzzle_statuses
        }) }}
    </template>
</turbo-stream>

{# Update sell/swap action button (for dropdown menus) #}
<turbo-stream action="replace" target="sellswap-action-{{ puzzle_id }}">
    <template>
        {{ include('sell-swap/_dropdown_action.html.twig', {
            puzzle_id: puzzle_id,
            puzzle_statuses: puzzle_statuses
        }) }}
    </template>
</turbo-stream>

{# Show toast notification #}
<turbo-stream action="append" target="toast-container">
    <template>
        <div class="toast align-items-center text-bg-success border-0"
             data-controller="turbo-stream-toast"
             data-turbo-stream-toast-delay-value="3000">
            <div class="d-flex">
                <div class="toast-body">
                    {{ message }}
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </template>
</turbo-stream>
