{% extends 'base.html.twig' %}

{% block title %}{{ 'sell_swap_list.add.title'|trans }} - {{ puzzle.puzzleName }}{% endblock %}

{% block content %}
<div class="container py-4">
    <div class="card mx-auto" style="max-width: 500px;">
        <div class="card-header">
            <h5 class="mb-0">{{ 'sell_swap_list.add.title'|trans }}</h5>
        </div>
        <div class="card-body">
            {% if not logged_user.profile.activeMembership %}
                <div class="text-center py-3">
                    <div class="mb-3">
                        <i class="ci-locked fs-1 text-muted"></i>
                    </div>
                    <h5 class="text-muted">{{ 'sell_swap_list.membership_required.title'|trans }}</h5>
                    <p class="text-muted small">{{ 'sell_swap_list.membership_required.message'|trans }}</p>
                    <a href="{{ path('membership') }}" class="btn btn-outline-primary">
                        <i class="ci-locked me-1"></i>{{ 'membership.members_exclusive_button'|trans }}
                    </a>
                    <a href="{{ path('puzzle_detail', {puzzleId: puzzle.puzzleId}) }}" class="btn btn-secondary">
                        {{ 'forms.cancel'|trans }}
                    </a>
                </div>
            {% elseif is_in_sell_swap_list %}
                <div class="alert alert-info mb-3">
                    <i class="bi bi-shop me-2"></i>{{ 'sell_swap_list.already_in_list'|trans }}
                </div>
                <form action="{{ path('sellswap_remove', {puzzleId: puzzle.puzzleId}) }}"
                      method="post"
                      class="d-inline">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-shop me-1"></i> {{ 'sell_swap_list.remove.button'|trans }}
                    </button>
                </form>
                <a href="{{ path('puzzle_detail', {puzzleId: puzzle.puzzleId}) }}" class="btn btn-secondary">
                    {{ 'forms.cancel'|trans }}
                </a>
            {% else %}
                {{ include('sell-swap/_add_item_form.html.twig', {in_modal: false}) }}
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
