{% extends 'base.html.twig' %}

{% block title %}{{ 'sell_swap_list.title'|trans }}{% if not isOwnProfile %} - {{ player.playerName }}{% endif %}{% endblock %}

{% block content %}
<div data-controller="collection-items collection-filter">
    <twig:PlayerHeader player="{{ player }}" />

    {% include '_return_back_button.html.twig' with {fallbackUrl: path('puzzle_library', {playerId: player.playerId}), fallbackTitle: 'collections.back_to_library'|trans} %}

    <div class="d-flex flex-column flex-sm-row align-items-start justify-content-between gap-2 mb-4">
        <div>
            <h1 class="h3 mb-0 d-flex align-items-center">
                <span><i class="bi bi-shop me-2"></i>{{ 'sell_swap_list.title'|trans }}</span>
                {% if isOwnProfile %}
                    <a href="{{ path('edit_sell_swap_list_settings', {playerId: player.playerId, 'return': path('sell_swap_list_detail', {playerId: player.playerId, return: app.request.query.get('return'), return_title: app.request.query.get('return_title')}), 'return_title': 'sell_swap_list.title'|trans}) }}" data-turbo="true" data-turbo-frame="modal-frame" class="fs-sm fw-normal text-primary ms-2 text-decoration-underline">
                        <i class="ci-eye me-1"></i>{{ 'collections.public'|trans }}
                    </a>
                {% else %}
                    <small class="fs-sm fw-normal text-primary ms-2">
                        <i class="ci-eye me-1"></i>{{ 'collections.public'|trans }}
                    </small>
                {% endif %}
            </h1>
            <p class="text-muted mb-0 small">
                {% if not isOwnProfile %}
                    {{ player.playerName ?? player.code }}
                    <span class="text-muted px-2">•</span>
                {% endif %}
                <i class="bi bi-puzzle me-1"></i>
                {{ 'sell_swap_list.items_count'|trans({'%count%': '<span id="sellswap-count" data-collection-items-target="count">' ~ items|length ~ '</span>'})|raw }}
                {% if player.ratingCount > 0 %}
                    <span class="text-muted px-2">•</span>
                    {% include 'rating/_rating_summary.html.twig' with {average_rating: player.averageRating, rating_count: player.ratingCount, player_id: player.playerId} %}
                {% endif %}
            </p>
        </div>

        <div class="d-flex align-items-center gap-2 flex-shrink-0">
            {% if isOwnProfile %}
                {{ include('_share_button.html.twig', {share_url: url('sell_swap_list_detail', {playerId: player.playerId})}) }}
                <a href="{{ path('sold_swapped_history', {playerId: player.playerId}) }}" class="btn btn-sm btn-outline-secondary">
                    <i class="bi-clock-history me-1"></i> {{ 'sell_swap_list.history.button'|trans }}
                </a>
                <a href="{{ path('edit_sell_swap_list_settings', {playerId: player.playerId, 'return': path('sell_swap_list_detail', {playerId: player.playerId, return: app.request.query.get('return'), return_title: app.request.query.get('return_title')}), 'return_title': 'sell_swap_list.title'|trans}) }}" data-turbo="true" data-turbo-frame="modal-frame" class="btn btn-sm btn-outline-primary">
                    <i class="ci-edit me-1"></i> {{ 'edit'|trans }}
                </a>
            {% endif %}
        </div>
    </div>

    {% if isOwnProfile and (settings is null or not settings.currency and not settings.customCurrency or settings.shippingCountries is empty) %}
        {% include 'sell-swap/_settings_checklist.html.twig' with {
            settings: settings,
            editUrl: path('edit_sell_swap_list_settings', {playerId: player.playerId, 'return': path('sell_swap_list_detail', {playerId: player.playerId, return: app.request.query.get('return'), return_title: app.request.query.get('return_title')}), 'return_title': 'sell_swap_list.title'|trans}),
        } only %}
    {% endif %}

    {% if settings %}
        <div class="card mb-4 shadow-custom">
            <div class="card-body">
                <div class="d-flex flex-wrap gap-4">
                    {% if settings.currency or settings.customCurrency %}
                        <div class="flex-grow-1">
                            <div class="text-muted small mb-1"><i class="bi bi-currency-exchange me-1"></i>{{ 'sell_swap_list.settings.currency'|trans }}</div>
                            <div class="fw-medium">{{ settings.customCurrency ?? (settings.currency != 'custom' ? settings.currency : '') }}</div>
                        </div>
                    {% endif %}

                    {% if settings.shippingCost %}
                        <div class="flex-grow-1">
                            <div class="text-muted small mb-1"><i class="bi bi-cash me-1"></i>{{ 'sell_swap_list.settings.shipping_cost'|trans }}</div>
                            <div class="fw-medium">{{ settings.shippingCost }}</div>
                        </div>
                    {% endif %}

                    {% if settings.contactInfo %}
                        <div class="flex-grow-1">
                            <div class="text-muted small mb-1"><i class="bi bi-envelope me-1"></i>{{ 'sell_swap_list.settings.contact_info'|trans }}</div>
                            <div class="fw-medium">{{ settings.contactInfo|nl2br }}</div>
                        </div>
                    {% endif %}

                    {% if settings.shippingCountries is not empty %}
                        <div class="flex-grow-1">
                            <div class="text-muted small mb-1"><i class="bi bi-globe me-1"></i>{{ 'sell_swap_list.settings.ships_to'|trans }}</div>
                            <div class="d-flex flex-wrap gap-1">
                                {% for code in settings.shippingCountries %}
                                    <span class="badge bg-light text-dark border">
                                        <small class="shadow-custom fi fi-{{ code }}"></small>
                                        {{ code|upper|country_name }}
                                    </span>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}

                    {% if settings.shippingInfo %}
                        <div class="flex-grow-1">
                            <div class="text-muted small mb-1"><i class="bi bi-truck me-1"></i>{{ 'sell_swap_list.settings.shipping_info'|trans }}</div>
                            <div>{{ settings.shippingInfo|nl2br }}</div>
                        </div>
                    {% endif %}

                    {% if settings.description %}
                        <div class="flex-grow-1">
                            <div class="text-muted small mb-1"><i class="bi bi-card-text me-1"></i>{{ 'sell_swap_list.settings.description'|trans }}</div>
                            <div>{{ settings.description|nl2br }}</div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endif %}

    {% if items|length > 3 %}
        <div class="filters mb-3">
            <div class="row gx-2 align-items-center">
                <div class="col-12 col-sm-6 col-lg-3 mb-2">
                    <div class="position-relative">
                        <input class="form-control" type="text"
                               data-collection-filter-target="search"
                               data-action="input->collection-filter#filter"
                               placeholder="{{ 'filters.text_search_placeholder'|trans }}">
                    </div>
                </div>

                <div class="col-6 col-sm-3 col-lg-2 mb-2">
                    <select class="form-select" data-collection-filter-target="manufacturer" data-action="change->collection-filter#filter">
                        <option value="">{{ 'filters.manufacturer_placeholder'|trans }}</option>
                    </select>
                </div>

                <div class="col-6 col-sm-3 col-lg-2 mb-2">
                    <select class="form-select"
                            data-collection-filter-target="listingTypeSelect"
                            data-action="change->collection-filter#filter">
                        <option value="all">{{ 'sell_swap_list.filter.all_types'|trans }}</option>
                        <option value="swap">{{ 'sell_swap_list.listing_type.swap'|trans }}</option>
                        <option value="sell">{{ 'sell_swap_list.listing_type.sell'|trans }}</option>
                        <option value="free">{{ 'sell_swap_list.listing_type.free'|trans }}</option>
                    </select>
                </div>

                <div class="col-6 col-sm-3 col-lg-2 mb-2">
                    <input type="number" class="form-control" placeholder="{{ 'sell_swap_list.filter.min_price'|trans }}"
                           data-collection-filter-target="priceMin"
                           data-action="input->collection-filter#filter">
                </div>

                <div class="col-6 col-sm-3 col-lg-2 mb-2">
                    <input type="number" class="form-control" placeholder="{{ 'sell_swap_list.filter.max_price'|trans }}"
                           data-collection-filter-target="priceMax"
                           data-action="input->collection-filter#filter">
                </div>
            </div>
        </div>
    {% endif %}

    <div id="sellswap-list-container">
    {% if items is empty %}
        {{ include('sell-swap/_empty_state.html.twig') }}
    {% else %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3 mb-3">
            {% for item in items %}
                <div class="col"
                     id="library-sell-swap-{{ item.puzzleId }}"
                     data-collection-items-target="item"
                     data-puzzle-id="{{ item.puzzleId }}"
                     data-collection-filter-target="item"
                     data-pieces-count="{{ item.piecesCount }}"
                     data-puzzle-name="{{ item.puzzleName }}"
                     data-puzzle-alternative-name="{{ item.puzzleAlternativeName ?? '' }}"
                     data-puzzle-code="{{ item.puzzleIdentificationNumber ?? '' }}"
                     data-ean="{{ item.ean ?? '' }}"
                     data-manufacturer="{{ item.manufacturerName ?? '' }}"
                     data-listing-type="{{ item.listingType.value }}"
                     data-price="{{ item.price ?? '' }}">
                    {% include 'sell-swap/_item_card.html.twig' with {
                        item: item,
                        settings: settings,
                        isOwnProfile: isOwnProfile,
                        logged_user: logged_user,
                        sellSwapReturnUrl: path('sell_swap_list_detail', {playerId: player.playerId, return: app.request.query.get('return'), return_title: app.request.query.get('return_title')}),
                        sellSwapReturnTitle: 'sell_swap_list.title'|trans,
                    } only %}
                </div>
            {% endfor %}
        </div>

        <div class="hidden" data-collection-filter-target="noResults">
            <div class="alert alert-warning mb-0">
                {{ 'filters.no_puzzle_matches_filters'|trans }}
            </div>
        </div>
    {% endif %}
    </div>
</div>
{% endblock %}
