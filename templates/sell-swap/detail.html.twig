{% extends 'base.html.twig' %}

{% block title %}{{ 'sell_swap_list.title'|trans }}{% if not isOwnProfile %} - {{ player.playerName }}{% endif %}{% endblock %}

{% block content %}
<div data-controller="collection-items sell-swap-filter">
    <twig:PlayerHeader player="{{ player }}" />

    <div class="d-flex align-items-center justify-content-between mb-2">
        <div>
            <h1 class="h3 mb-1">{{ 'sell_swap_list.title'|trans }}</h1>
            <p class="text-muted mb-0">
                {% if not isOwnProfile %}
                    {{ player.playerName ?? player.code }}
                    <span class="text-muted px-2">â€¢</span>
                {% endif %}
                <i class="bi bi-puzzle me-1"></i>
                {{ 'sell_swap_list.items_count'|trans({'%count%': '<span data-collection-items-target="count">' ~ items|length ~ '</span>'})|raw }}
                <span class="px-2"></span>
                <span class="text-primary small me-2">
                    <i class="ci-eye me-1"></i> {{ 'collections.public'|trans }}
                </span>
            </p>
        </div>

        <div class="d-flex align-items-center gap-2">
            {% if isOwnProfile %}
                <a href="{{ path('sold_swapped_history', {playerId: player.playerId}) }}" class="btn btn-sm btn-outline-secondary">
                    <i class="ci-history me-1"></i> {{ 'sell_swap_list.history.button'|trans }}
                </a>
                <a href="{{ path('edit_sell_swap_list_settings', {playerId: player.playerId}) }}" class="btn btn-sm btn-outline-primary">
                    <i class="ci-edit me-1"></i> {{ 'edit'|trans }}
                </a>
            {% endif %}
        </div>
    </div>

    {% if settings %}
        <div class="card mb-4">
            <div class="card-body">
                {% if settings.description %}
                    <p class="mb-2">{{ settings.description|nl2br }}</p>
                {% endif %}

                <div class="row">
                    {% if settings.currency or settings.customCurrency %}
                        <div class="col-md-4 mb-2">
                            <strong><i class="bi bi-currency-exchange me-1"></i>{{ 'sell_swap_list.settings.currency'|trans }}:</strong>
                            {{ settings.customCurrency ?? settings.currency }}
                        </div>
                    {% endif %}

                    {% if settings.shippingInfo %}
                        <div class="col-md-4 mb-2">
                            <strong><i class="bi bi-truck me-1"></i>{{ 'sell_swap_list.settings.shipping_info'|trans }}:</strong>
                            {{ settings.shippingInfo|nl2br }}
                        </div>
                    {% endif %}

                    {% if settings.contactInfo %}
                        <div class="col-md-4 mb-2">
                            <strong><i class="bi bi-envelope me-1"></i>{{ 'sell_swap_list.settings.contact_info'|trans }}:</strong>
                            {{ settings.contactInfo|nl2br }}
                        </div>
                    {% endif %}
                </div>

                <div class="alert alert-info mb-0 mt-2 small">
                    <i class="bi bi-info-circle me-1"></i>
                    {{ 'sell_swap_list.contact_notice'|trans }}
                </div>
            </div>
        </div>
    {% endif %}

    <div class="mb-4">
        <a href="{{ path('player_collections', {playerId: player.playerId}) }}" class="btn btn-sm btn-outline-secondary">
            <i class="ci-arrow-left me-1"></i> {{ 'collections.back_to_collections'|trans }}
        </a>
    </div>

    {% if items|length > 3 %}
        <div class="filters mb-3">
            <div class="row gx-2 align-items-center">
                <div class="col-12 col-sm-6 col-lg-3 mb-2">
                    <div class="position-relative">
                        <input class="form-control" type="text"
                               data-sell-swap-filter-target="search"
                               data-action="input->sell-swap-filter#filter"
                               placeholder="{{ 'filters.text_search_placeholder'|trans }}">
                    </div>
                </div>

                <div class="col-6 col-sm-3 col-lg-2 mb-2">
                    <select class="form-select" data-sell-swap-filter-target="manufacturer" data-action="change->sell-swap-filter#filter">
                        <option value="">{{ 'filters.manufacturer_placeholder'|trans }}</option>
                    </select>
                </div>

                <div class="col-6 col-sm-3 col-lg-2 mb-2">
                    <select class="form-select"
                            data-sell-swap-filter-target="listingTypeSelect"
                            data-action="change->sell-swap-filter#filter">
                        <option value="all">{{ 'sell_swap_list.filter.all_types'|trans }}</option>
                        <option value="swap">{{ 'sell_swap_list.listing_type.swap'|trans }}</option>
                        <option value="sell">{{ 'sell_swap_list.listing_type.sell'|trans }}</option>
                    </select>
                </div>

                <div class="col-6 col-sm-3 col-lg-2 mb-2">
                    <input type="number" class="form-control" placeholder="{{ 'sell_swap_list.filter.min_price'|trans }}"
                           data-sell-swap-filter-target="priceMin"
                           data-action="input->sell-swap-filter#filter">
                </div>

                <div class="col-6 col-sm-3 col-lg-2 mb-2">
                    <input type="number" class="form-control" placeholder="{{ 'sell_swap_list.filter.max_price'|trans }}"
                           data-sell-swap-filter-target="priceMax"
                           data-action="input->sell-swap-filter#filter">
                </div>
            </div>
        </div>
    {% endif %}

    {% if items is empty %}
        <div class="text-center py-5">
            <div class="mb-3">
                <i class="bi bi-shop fs-1 text-muted"></i>
            </div>
            {% if isOwnProfile %}
                <h4 class="text-muted">{{ 'sell_swap_list.empty.title'|trans }}</h4>
                <p class="text-muted">{{ 'sell_swap_list.empty.message'|trans }}</p>
            {% else %}
                <h4 class="text-muted">{{ 'sell_swap_list.empty.title_other'|trans }}</h4>
                <p class="text-muted">{{ 'sell_swap_list.empty.message_other'|trans({'%name%': player.playerName}) }}</p>
            {% endif %}
        </div>
    {% else %}
        <div class="row g-3 mb-3">
            {% for item in items %}
                <div class="col-12 col-lg-6"
                     data-collection-items-target="item"
                     data-sell-swap-filter-target="item"
                     data-puzzle-id="{{ item.puzzleId }}"
                     data-sell-swap-item-id="{{ item.sellSwapListItemId }}"
                     data-pieces-count="{{ item.piecesCount }}"
                     data-puzzle-name="{{ item.puzzleName }}"
                     data-puzzle-alternative-name="{{ item.puzzleAlternativeName ?? '' }}"
                     data-puzzle-code="{{ item.puzzleIdentificationNumber ?? '' }}"
                     data-ean="{{ item.ean ?? '' }}"
                     data-manufacturer="{{ item.manufacturerName ?? '' }}"
                     data-listing-type="{{ item.listingType.value }}"
                     data-price="{{ item.price ?? '' }}">
                    <div class="card card-body shadow p-2 position-relative">
                        <div class="d-flex">
                            <div style="width: 60px;" class="flex-shrink-0">
                                {% if item.image %}
                                    <a href="{{ path('puzzle_detail', {puzzleId: item.puzzleId}) }}">
                                        <img src="{{ item.image|imagine_filter('puzzle_small') }}"
                                             alt="{{ item.puzzleName }}"
                                             class="rounded"
                                             style="width: 60px; height: 60px; object-fit: cover;">
                                    </a>
                                {% else %}
                                    <div class="d-flex align-items-center justify-content-center rounded bg-light"
                                         style="width: 60px; height: 60px;">
                                        <i class="ci-image text-muted"></i>
                                    </div>
                                {% endif %}
                            </div>

                            <div class="ps-2 flex-grow-1">
                                <div class="d-flex justify-content-between">
                                    <div class="pe-2">
                                        <a href="{{ path('puzzle_detail', {puzzleId: item.puzzleId}) }}"
                                           class="text-decoration-underline fs-sm low-line-height d-inline-block mb-1">
                                            {{ item.puzzleName }}
                                        </a>
                                        <br>
                                        <small class="fw-bold">{{ 'pieces_count'|trans({'%count%': item.piecesCount})|raw }}</small>

                                        <div class="mt-1">
                                            {% if item.listingType.value == 'swap' %}
                                                <span class="badge bg-info">{{ 'sell_swap_list.listing_type.swap'|trans }}</span>
                                            {% elseif item.listingType.value == 'sell' %}
                                                <span class="badge bg-success">{{ 'sell_swap_list.listing_type.sell'|trans }}</span>
                                            {% else %}
                                                <span class="badge bg-primary">{{ 'sell_swap_list.listing_type.both'|trans }}</span>
                                            {% endif %}

                                            {% if item.price %}
                                                <span class="badge bg-warning text-dark">{{ item.price }} {{ settings.customCurrency ?? settings.currency ?? '' }}</span>
                                            {% endif %}

                                            <span class="badge bg-secondary">
                                                {% if item.condition.value == 'like_new' %}
                                                    {{ 'sell_swap_list.condition.like_new'|trans }}
                                                {% elseif item.condition.value == 'normal' %}
                                                    {{ 'sell_swap_list.condition.normal'|trans }}
                                                {% elseif item.condition.value == 'not_so_good' %}
                                                    {{ 'sell_swap_list.condition.not_so_good'|trans }}
                                                {% else %}
                                                    {{ 'sell_swap_list.condition.missing_pieces'|trans }}
                                                {% endif %}
                                            </span>
                                        </div>

                                        {% if item.comment %}
                                            <div class="text-muted small mt-1">{{ item.comment }}</div>
                                        {% endif %}
                                    </div>

                                    {% if isOwnProfile %}
                                        <div class="dropdown">
                                            <button class="btn btn-outline-primary shadow btn-xs dropdown-toggle"
                                                    type="button" data-bs-toggle="dropdown">
                                                <i class="ci-menu"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end">
                                                <li>
                                                    <a class="dropdown-item" href="{{ path('edit_sell_swap_list_item', {itemId: item.sellSwapListItemId}) }}">
                                                        <i class="ci-edit me-1"></i> {{ 'edit'|trans }}
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item text-success" href="#" data-bs-toggle="modal"
                                                       data-bs-target="#mark-sold-{{ item.sellSwapListItemId }}">
                                                        <i class="bi bi-check-circle me-1"></i> {{ 'sell_swap_list.mark_sold.button'|trans }}
                                                    </a>
                                                </li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <twig:RemovePuzzleFromSellSwapListButton puzzleId="{{ item.puzzleId }}" buttonClass="dropdown-item text-danger" />
                                                </li>
                                            </ul>
                                        </div>

                                        <twig:Modal id="mark-sold-{{ item.sellSwapListItemId }}">
                                            {% block modal_header %}
                                                <h5 class="modal-title">{{ 'sell_swap_list.mark_sold.title'|trans }}</h5>
                                            {% endblock %}
                                            {% block modal_body %}
                                                {{ component('MarkAsSoldSwappedForm', {
                                                    sellSwapListItemId: item.sellSwapListItemId,
                                                    puzzleId: item.puzzleId
                                                }) }}
                                            {% endblock %}
                                        </twig:Modal>
                                    {% endif %}
                                </div>

                                <div class="fs-sm text-muted">
                                    {{ item.manufacturerName ?? '-' }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="hidden" data-sell-swap-filter-target="noResults">
            <div class="alert alert-warning mb-0">
                {{ 'filters.no_puzzle_matches_filters'|trans }}
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
