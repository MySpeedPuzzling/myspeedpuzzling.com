{% extends 'base.html.twig' %}

{% block title %}{{ 'sell_swap_list.title'|trans }}{% if not isOwnProfile %} - {{ player.playerName }}{% endif %}{% endblock %}

{% block content %}
<div data-controller="collection-items collection-filter">
    <twig:PlayerHeader player="{{ player }}" />

    <div class="mb-3">
        <a href="{{ path('puzzle_library', {playerId: player.playerId}) }}" class="btn btn-sm btn-outline-secondary">
            <i class="ci-arrow-left me-1"></i> {{ 'collections.back_to_library'|trans }}
        </a>
    </div>

    <div class="d-flex flex-column flex-sm-row align-items-start justify-content-between gap-2 mb-4">
        <div>
            <h1 class="h3 mb-0 d-flex align-items-center">
                <span><i class="bi bi-shop me-2"></i>{{ 'sell_swap_list.title'|trans }}</span>
                {% if isOwnProfile %}
                    <a href="{{ path('edit_sell_swap_list_settings', {playerId: player.playerId}) }}" class="fs-sm fw-normal text-primary ms-2 text-decoration-underline">
                        <i class="ci-eye me-1"></i>{{ 'collections.public'|trans }}
                    </a>
                {% else %}
                    <small class="fs-sm fw-normal text-primary ms-2">
                        <i class="ci-eye me-1"></i>{{ 'collections.public'|trans }}
                    </small>
                {% endif %}
            </h1>
            <p class="text-muted mb-0 small">
                {% if not isOwnProfile %}
                    {{ player.playerName ?? player.code }}
                    <span class="text-muted px-2">â€¢</span>
                {% endif %}
                <i class="bi bi-puzzle me-1"></i>
                {{ 'sell_swap_list.items_count'|trans({'%count%': '<span id="sellswap-count" data-collection-items-target="count">' ~ items|length ~ '</span>'})|raw }}
            </p>
        </div>

        <div class="d-flex align-items-center gap-2 flex-shrink-0">
            {% if isOwnProfile %}
                {{ include('_share_button.html.twig', {share_url: url('sell_swap_list_detail', {playerId: player.playerId})}) }}
                <a href="{{ path('sold_swapped_history', {playerId: player.playerId}) }}" class="btn btn-sm btn-outline-secondary">
                    <i class="bi-clock-history me-1"></i> {{ 'sell_swap_list.history.button'|trans }}
                </a>
                <a href="{{ path('edit_sell_swap_list_settings', {playerId: player.playerId}) }}" class="btn btn-sm btn-outline-primary">
                    <i class="ci-edit me-1"></i> {{ 'edit'|trans }}
                </a>
            {% endif %}
        </div>
    </div>

    {% if settings %}
        <div class="card mb-4">
            <div class="card-body">
                {% if settings.description %}
                    <p class="mb-2">{{ settings.description|nl2br }}</p>
                {% endif %}

                <div class="row">
                    {% if settings.currency or settings.customCurrency %}
                        <div class="col-md-4 mb-2">
                            <strong><i class="bi bi-currency-exchange me-1"></i>{{ 'sell_swap_list.settings.currency'|trans }}:</strong>
                            {{ settings.customCurrency ?? settings.currency }}
                        </div>
                    {% endif %}

                    {% if settings.shippingInfo %}
                        <div class="col-md-4 mb-2">
                            <strong><i class="bi bi-truck me-1"></i>{{ 'sell_swap_list.settings.shipping_info'|trans }}:</strong>
                            {{ settings.shippingInfo|nl2br }}
                        </div>
                    {% endif %}

                    {% if settings.contactInfo %}
                        <div class="col-md-4 mb-2">
                            <strong><i class="bi bi-envelope me-1"></i>{{ 'sell_swap_list.settings.contact_info'|trans }}:</strong>
                            {{ settings.contactInfo|nl2br }}
                        </div>
                    {% endif %}
                </div>

                <div class="alert alert-info mb-0 mt-2 small">
                    <i class="bi bi-info-circle me-1"></i>
                    {{ 'sell_swap_list.contact_notice'|trans }}
                </div>
            </div>
        </div>
    {% endif %}

    {% if items|length > 3 %}
        <div class="filters mb-3">
            <div class="row gx-2 align-items-center">
                <div class="col-12 col-sm-6 col-lg-3 mb-2">
                    <div class="position-relative">
                        <input class="form-control" type="text"
                               data-collection-filter-target="search"
                               data-action="input->collection-filter#filter"
                               placeholder="{{ 'filters.text_search_placeholder'|trans }}">
                    </div>
                </div>

                <div class="col-6 col-sm-3 col-lg-2 mb-2">
                    <select class="form-select" data-collection-filter-target="manufacturer" data-action="change->collection-filter#filter">
                        <option value="">{{ 'filters.manufacturer_placeholder'|trans }}</option>
                    </select>
                </div>

                <div class="col-6 col-sm-3 col-lg-2 mb-2">
                    <select class="form-select"
                            data-collection-filter-target="listingTypeSelect"
                            data-action="change->collection-filter#filter">
                        <option value="all">{{ 'sell_swap_list.filter.all_types'|trans }}</option>
                        <option value="swap">{{ 'sell_swap_list.listing_type.swap'|trans }}</option>
                        <option value="sell">{{ 'sell_swap_list.listing_type.sell'|trans }}</option>
                    </select>
                </div>

                <div class="col-6 col-sm-3 col-lg-2 mb-2">
                    <input type="number" class="form-control" placeholder="{{ 'sell_swap_list.filter.min_price'|trans }}"
                           data-collection-filter-target="priceMin"
                           data-action="input->collection-filter#filter">
                </div>

                <div class="col-6 col-sm-3 col-lg-2 mb-2">
                    <input type="number" class="form-control" placeholder="{{ 'sell_swap_list.filter.max_price'|trans }}"
                           data-collection-filter-target="priceMax"
                           data-action="input->collection-filter#filter">
                </div>
            </div>
        </div>
    {% endif %}

    <div id="sellswap-list-container">
    {% if items is empty %}
        {{ include('sell-swap/_empty_state.html.twig') }}
    {% else %}
        <div class="row g-3 mb-3">
            {% for item in items %}
                {{ include('_puzzle_library_item.html.twig', {
                    item: item,
                    page_context: 'sell-swap',
                    puzzle_statuses: puzzle_statuses,
                    logged_user: logged_user,
                    isOwnProfile: isOwnProfile,
                    settings: settings,
                }) }}
            {% endfor %}
        </div>

        <div class="hidden" data-collection-filter-target="noResults">
            <div class="alert alert-warning mb-0">
                {{ 'filters.no_puzzle_matches_filters'|trans }}
            </div>
        </div>
    {% endif %}
    </div>
</div>
{% endblock %}
