{% extends 'base.html.twig' %}

{% block title %}{{ 'sell_swap_list.settings.title'|trans }}{% endblock %}

{% block content %}
    <twig:PlayerHeader player="{{ player }}" />

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h3 class="mb-0">{{ 'sell_swap_list.settings.title'|trans }}</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-4">
                        <i class="bi bi-info-circle me-1"></i>
                        {{ 'sell_swap_list.settings.info'|trans }}
                    </div>

                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_row(form.description) }}
                    </div>

                    <div class="row" data-controller="conditional-field" data-conditional-field-trigger-value="custom">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.currency, {
                                attr: {'data-action': 'change->conditional-field#toggle'}
                            }) }}
                        </div>
                        <div class="col-md-6 mb-3 d-none" data-conditional-field-target="conditionalElement">
                            {{ form_row(form.customCurrency) }}
                            <small class="form-text text-muted">
                                {{ 'sell_swap_list.settings.custom_currency_help'|trans }}
                            </small>
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.shippingInfo) }}
                    </div>

                    <div class="mb-4">
                        {{ form_row(form.contactInfo) }}
                        <div class="alert alert-warning mt-2 small">
                            <i class="bi bi-exclamation-triangle me-1"></i>
                            {{ 'sell_swap_list.settings.contact_info_warning'|trans }}
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ cancelUrl }}" class="btn btn-secondary">
                            {{ 'forms.cancel'|trans }}
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>{{ 'forms.save'|trans }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
