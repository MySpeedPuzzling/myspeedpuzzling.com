{% extends 'base.html.twig' %}

{% block title %}{{ 'sell_swap_list.history.title'|trans }}{% endblock %}

{% block content %}
    <twig:PlayerHeader player="{{ player }}" />

    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0">{{ 'sell_swap_list.history.title'|trans }}</h1>
        <a href="{{ path('sell_swap_list_detail', {playerId: player.playerId}) }}" class="btn btn-sm btn-outline-secondary">
            <i class="ci-arrow-left me-1"></i> {{ 'sell_swap_list.back_to_list'|trans }}
        </a>
    </div>

    {% if items is empty %}
        <div class="text-center py-5">
            <div class="mb-3">
                <i class="bi bi-clock-history fs-1 text-muted"></i>
            </div>
            <h4 class="text-muted">{{ 'sell_swap_list.history.empty'|trans }}</h4>
        </div>
    {% else %}
        <div class="card shadow">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>{{ 'sell_swap_list.history.puzzle'|trans }}</th>
                            <th>{{ 'sell_swap_list.history.type'|trans }}</th>
                            <th>{{ 'sell_swap_list.history.price'|trans }}</th>
                            <th>{{ 'sell_swap_list.history.buyer'|trans }}</th>
                            <th>{{ 'sell_swap_list.history.date'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in items %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        {% if item.image %}
                                            {{ lazy_puzzle_image(
                                                item.image,
                                                'puzzle_small',
                                                item.puzzleName,
                                                loop.index,
                                                40,
                                                'rounded me-2'
                                            ) }}
                                        {% endif %}
                                        <div>
                                            <a href="{{ path('puzzle_detail', {puzzleId: item.puzzleId}) }}">
                                                {{ item.puzzleName }}
                                            </a>
                                            <br>
                                            <small class="text-muted">{{ item.piecesCount }} pcs</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    {% if item.listingType.value == 'swap' %}
                                        <span class="badge bg-info">{{ 'sell_swap_list.listing_type.swap'|trans }}</span>
                                    {% elseif item.listingType.value == 'sell' %}
                                        <span class="badge bg-success">{{ 'sell_swap_list.listing_type.sell'|trans }}</span>
                                    {% elseif item.listingType.value == 'free' %}
                                        <span class="badge bg-danger">{{ 'sell_swap_list.listing_type.free'|trans }}</span>
                                    {% else %}
                                        <span class="badge bg-primary">{{ 'sell_swap_list.listing_type.both'|trans }}</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if item.price and item.price > 0 %}
                                        {{ item.price }}
                                    {% else %}
                                        <small class="text-muted"><i class="bi bi-exclamation-circle me-1"></i>{{ 'marketplace.price_not_disclosed'|trans }}</small>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if item.buyerPlayerId %}
                                        <a href="{{ path('player_profile', {playerId: item.buyerPlayerId}) }}">
                                            {{ item.buyerPlayerName ?? item.buyerPlayerCode }}
                                        </a>
                                    {% elseif item.buyerName %}
                                        {{ item.buyerName }}
                                    {% else %}
                                        <span class="text-muted">{{ 'sell_swap_list.history.unknown_buyer'|trans }}</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {{ item.soldAt|format_datetime('short', 'short') }}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}
{% endblock %}
