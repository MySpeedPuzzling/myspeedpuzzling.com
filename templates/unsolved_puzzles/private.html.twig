{% extends 'base.html.twig' %}

{% block title %}{{ 'unsolved_puzzles.private'|trans }} - {{ player.playerName }}{% endblock %}

{% block content %}
    <div class="text-center py-5">
        <div class="mb-4">
            <i class="ci-lock fs-1 text-muted"></i>
        </div>

        <h2 class="h4 mb-3">{{ 'unsolved_puzzles.private'|trans }}</h2>
        <p class="text-muted mb-4">{{ 'unsolved_puzzles.private_message'|trans({'%collection%': collectionName, '%player%': player.playerName}) }}</p>

        <div class="d-flex justify-content-center gap-3">
            <a href="{{ path('puzzle_library', {playerId: player.playerId}) }}" class="btn btn-outline-secondary">
                <i class="ci-arrow-left me-1"></i> {{ 'collections.back_to_collections'|trans }}
            </a>

            <a href="{{ path('ladder') }}" class="btn btn-primary">
                <i class="ci-home me-1"></i> {{ 'navigation.home'|trans }}
            </a>
        </div>
    </div>
{% endblock %}
