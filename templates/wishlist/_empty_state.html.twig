<div class="text-center py-5">
    <div class="mb-3">
        <i class="bi bi-heart fs-1 text-muted"></i>
    </div>
    {% if isOwnProfile %}
        <h4 class="text-muted">{{ 'wish_list.empty.title'|trans }}</h4>
        <p class="text-muted">{{ 'wish_list.empty.message'|trans }}</p>
    {% else %}
        <h4 class="text-muted">{{ 'wish_list.empty.title_other'|trans }}</h4>
        <p class="text-muted">{{ 'wish_list.empty.message_other'|trans({'%name%': player.playerName}) }}</p>
    {% endif %}
</div>
