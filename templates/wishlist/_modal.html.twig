<turbo-frame id="modal-frame">
    <div class="modal-header">
        <h5 class="modal-title">{{ 'wish_list.add.title'|trans }}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>

    <div class="modal-body">
        {% if not is_logged_in %}
            <div class="alert alert-warning mb-0">
                <i class="bi bi-exclamation-triangle me-2"></i>{{ 'wish_list.login_required'|trans }}
            </div>
        {% else %}
            <form action="{{ path('wishlist_add', {puzzleId: puzzle.puzzleId}) }}"
                  method="post"
                  data-turbo="true">

                <div class="mb-4">
                    <div class="form-check">
                        <input type="checkbox"
                               class="form-check-input"
                               id="removeOnCollectionAdd"
                               name="removeOnCollectionAdd"
                               value="1"
                               checked>
                        <label class="form-check-label" for="removeOnCollectionAdd">
                            {{ 'wish_list.form.remove_on_add'|trans }}
                        </label>
                    </div>
                    <small class="form-text text-muted d-block mt-2">
                        {{ 'wish_list.form.remove_on_add_help'|trans }}
                    </small>
                </div>

                <div class="d-grid gap-2 d-sm-flex">
                    <button type="submit" class="btn btn-primary flex-grow-1">
                        <i class="bi bi-heart me-1"></i> {{ 'wish_list.add.button'|trans }}
                    </button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        {{ 'forms.cancel'|trans }}
                    </button>
                </div>
            </form>
        {% endif %}
    </div>
</turbo-frame>
