{# Remove the item from the wishlist #}
<turbo-stream action="remove" target="wishlist-item-{{ puzzle_id }}"></turbo-stream>

{# Update the count #}
<turbo-stream action="update" target="wishlist-count">
    <template>{{ remaining_count }}</template>
</turbo-stream>

{# Show empty state if no items remaining #}
{% if remaining_count == 0 %}
<turbo-stream action="update" target="wishlist-list-container">
    <template>
        {{ include('wishlist/_empty_state.html.twig') }}
    </template>
</turbo-stream>
{% endif %}

{# Show toast notification #}
<turbo-stream action="append" target="toast-container">
    <template>
        <div class="toast align-items-center text-bg-success border-0"
             data-controller="turbo-stream-toast"
             data-turbo-stream-toast-delay-value="3000">
            <div class="d-flex">
                <div class="toast-body">
                    {{ message }}
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </template>
</turbo-stream>
